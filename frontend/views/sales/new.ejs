    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous" onerror="console.warn('Bootstrap JS failed to load')"></script>
    <script>
        // Prevent page from getting stuck in loading state
        window.addEventListener('DOMContentLoaded', function() {
            console.log('âœ… POS page loaded successfully');
            document.body.style.opacity = '1';
        });

        // Handle failed image loads gracefully
        document.addEventListener('error', function(e) {
            if (e.target.tagName === 'IMG') {
                console.warn('Image failed to load:', e.target.src);
                e.target.style.display = 'block';
            }
        }, true);

        // Cart state management - Individual carts for each person
        let carts = {
            1: {},
            2: {},
            3: {},
            4: {},
            5: {}
        };
        let currentTable = 1;
        let maxPersons = 5;
        let cart = carts[currentTable]; // Reference to current cart

        // Add new person function
        function addNewPerson() {
            maxPersons++;
            carts[maxPersons] = {};
            
            // Create new tab button
            const tabsContainer = document.querySelector('.table-tabs');
            const addBtn = document.getElementById('addPersonBtn');
            
            const newTab = document.createElement('button');
            newTab.className = 'table-tab';
            newTab.dataset.table = maxPersons;
            newTab.innerHTML = `PERS ${maxPersons}<br><small>â‚¹<span id="table${maxPersons}-total">0.0</span></small>`;
            
            // Insert before the add button
            tabsContainer.insertBefore(newTab, addBtn);
            
            // Add click listener to new tab
            newTab.addEventListener('click', function() {
                document.querySelectorAll('.table-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                currentTable = parseInt(this.dataset.table);
                cart = carts[currentTable];
                refreshProductDisplay();
                updateTotals();
            });
        }

        // Category filter
        document.querySelectorAll('.category-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelectorAll('.category-item').forEach(i => i.classList.remove('active'));
                this.classList.add('active');
                
                const category = this.dataset.category;
                filterProducts(category);
            });
        });

        function filterProducts(category) {
            const products = document.querySelectorAll('.product-card');
            products.forEach(product => {
                if (category === 'all' || product.dataset.category === category) {
                    product.style.display = 'block';
                } else {
                    product.style.display = 'none';
                }
            });
        }

        // Search functionality
        document.getElementById('productSearch').addEventListener('input', function(e) {
            const search = e.target.value.toLowerCase();
            document.querySelectorAll('.product-card').forEach(card => {
                const name = card.dataset.name.toLowerCase();
                card.style.display = name.includes(search) ? 'block' : 'none';
            });
        });

        // Add click listener to products
        document.querySelectorAll('.product-card').forEach(card => {
            card.addEventListener('click', function() {
                if (!this.classList.contains('in-cart')) {
                    addToCart(this);
                }
            });
        });

        // Add to cart
        function addToCart(element) {
            const id = element.dataset.id;
            const name = element.dataset.name;
            const price = parseFloat(element.dataset.price);
            const stock = parseFloat(element.dataset.stock);

            if (!cart[id]) {
                cart[id] = {
                    id: id,
                    name: name,
                    price: price,
                    quantity: 1,
                    stock: stock
                };
                
                updateProductCardDisplay(element, cart[id]);
            }

            updateTotals();
        }

        // Update product card display based on current cart
        function updateProductCardDisplay(element, item) {
            if (item) {
                element.classList.add('in-cart');
                element.querySelector('.quantity-controls').style.display = 'flex';
                element.querySelector('.remove-btn').style.display = 'block';
                element.querySelector('.qty-display').textContent = item.quantity;
            } else {
                element.classList.remove('in-cart');
                element.querySelector('.quantity-controls').style.display = 'none';
                element.querySelector('.remove-btn').style.display = 'none';
                element.querySelector('.qty-display').textContent = '0';
            }
        }

        function increaseQty(btn) {
            const card = btn.closest('.product-card');
            const id = card.dataset.id;
            const stock = parseFloat(card.dataset.stock);
            
            if (cart[id] && cart[id].quantity < stock) {
                cart[id].quantity++;
                card.querySelector('.qty-display').textContent = cart[id].quantity;
                updateTotals();
            }
        }

        function decreaseQty(btn) {
            const card = btn.closest('.product-card');
            const id = card.dataset.id;
            
            if (cart[id] && cart[id].quantity > 1) {
                cart[id].quantity--;
                card.querySelector('.qty-display').textContent = cart[id].quantity;
                updateTotals();
            }
        }

        // Edit quantity by clicking on the number
        function editQuantity(qtyDisplay) {
            const card = qtyDisplay.closest('.product-card');
            const id = card.dataset.id;
            const stock = parseFloat(card.dataset.stock);
            
            if (!cart[id]) return;
            
            const currentQty = cart[id].quantity;
            
            // Create input element
            const input = document.createElement('input');
            input.type = 'number';
            input.min = '1';
            input.max = stock.toString();
            input.step = '1';
            input.value = currentQty;
            input.className = 'qty-edit-input';
            input.style.width = '45px';
            input.style.textAlign = 'center';
            input.style.border = '2px solid #4F46E5';
            input.style.borderRadius = '4px';
            input.style.padding = '2px';
            input.style.fontWeight = '600';
            
            // Replace span with input
            qtyDisplay.style.display = 'none';
            qtyDisplay.parentNode.insertBefore(input, qtyDisplay);
            input.focus();
            input.select();
            
            // Save on Enter or blur
            const saveQty = () => {
                let newQty = parseInt(input.value);
                
                // Validate
                if (isNaN(newQty) || newQty < 1) {
                    newQty = 1;
                } else if (newQty > stock) {
                    newQty = Math.floor(stock);
                    alert(`Maximum stock available is ${Math.floor(stock)}`);
                }
                
                // Update cart
                cart[id].quantity = newQty;
                qtyDisplay.textContent = newQty;
                
                // Remove input and show span
                input.remove();
                qtyDisplay.style.display = '';
                
                updateTotals();
            };
            
            input.addEventListener('blur', saveQty);
            input.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    saveQty();
                }
            });
            
            // Cancel on Escape
            input.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    input.remove();
                    qtyDisplay.style.display = '';
                }
            });
        }

        function removeFromCart(btn) {
            const card = btn.closest('.product-card');
            const id = card.dataset.id;
            
            delete cart[id];
            card.classList.remove('in-cart');
            card.querySelector('.quantity-controls').style.display = 'none';
            card.querySelector('.remove-btn').style.display = 'none';
            card.querySelector('.qty-display').textContent = '0';
            
            updateTotals();
        }

        function updateTotals() {
            let subtotal = 0;
            Object.values(cart).forEach(item => {
                subtotal += item.price * item.quantity;
            });

            const discountPercent = parseFloat(document.getElementById('discountPercent').value) || 0;
            const discountAmount = (subtotal * discountPercent) / 100;
            const total = subtotal - discountAmount;

            document.getElementById('header-total').textContent = total.toFixed(1);
            document.getElementById(`table${currentTable}-total`).textContent = total.toFixed(1);
            
            // Update modal total if modal is open
            if (document.getElementById('modalTotal')) {
                document.getElementById('modalTotal').textContent = total.toFixed(1);
            }
            
            // Calculate due if amount paid is entered
            calculateDue();
        }

        function calculateDue() {
            const amountPaidInput = document.getElementById('amountPaid');
            const dueDisplay = document.getElementById('dueDisplay');
            const dueAmount = document.getElementById('dueAmount');
            
            if (!amountPaidInput || !dueDisplay) return;
            
            const amountPaid = parseFloat(amountPaidInput.value) || 0;
            
            // Calculate current total
            let subtotal = 0;
            Object.values(cart).forEach(item => {
                subtotal += item.price * item.quantity;
            });
            const discountPercent = parseFloat(document.getElementById('discountPercent').value) || 0;
            const discountAmount = (subtotal * discountPercent) / 100;
            const total = subtotal - discountAmount;
            
            const due = Math.max(0, total - amountPaid);
            
            if (amountPaid > 0 && amountPaid < total) {
                dueDisplay.style.display = 'block';
                dueAmount.textContent = due.toFixed(1);
            } else {
                dueDisplay.style.display = 'none';
            }
        }

        // Person/Table switching
        document.querySelectorAll('.table-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.table-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                currentTable = parseInt(this.dataset.table);
                cart = carts[currentTable]; // Switch to the selected person's cart
                refreshProductDisplay(); // Update all product cards for this cart
                updateTotals();
            });
        });

        // Refresh product display when switching carts
        function refreshProductDisplay() {
            document.querySelectorAll('.product-card').forEach(card => {
                const id = card.dataset.id;
                const item = cart[id];
                updateProductCardDisplay(card, item);
            });
        }

        // Print modal
        function openPrintModal() {
            if (Object.keys(cart).length === 0) {
                alert('Please add items to cart first!');
                return;
            }

            // Update modal cart items
            let cartHTML = '';
            Object.values(cart).forEach(item => {
                const itemTotal = item.price * item.quantity;
                cartHTML += `
                    <div class="cart-item">
                        <span>${item.name} Ã— ${item.quantity}</span>
                        <span>â‚¹${itemTotal.toFixed(1)}</span>
                    </div>
                `;
            });
            document.getElementById('modalCartItems').innerHTML = cartHTML;

            // Update total
            let subtotal = 0;
            Object.values(cart).forEach(item => {
                subtotal += item.price * item.quantity;
            });
            const discountPercent = parseFloat(document.getElementById('discountPercent').value) || 0;
            const discountAmount = (subtotal * discountPercent) / 100;
            const total = subtotal - discountAmount;
            document.getElementById('modalTotal').textContent = total.toFixed(1);

            document.getElementById('printModal').classList.add('active');
        }

        function closePrintModal() {
            document.getElementById('printModal').classList.remove('active');
        }

        // Billing type tabs
        document.querySelectorAll('.billing-type-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.billing-type-tab').forEach(t => {
                    t.classList.remove('active');
                    t.innerHTML = t.innerHTML.replace('bi-circle-fill', 'bi-circle');
                });
                this.classList.add('active');
                this.innerHTML = this.innerHTML.replace('bi-circle', 'bi-circle-fill');
                
                // Show/hide fields based on billing type
                const billingType = this.dataset.type;
                const advanceFields = document.getElementById('advanceFields');
                const basicFields = document.getElementById('basicFields');
                
                if (billingType === 'advance') {
                    // Show B2B/Advanced fields, hide basic fields
                    advanceFields.style.display = 'block';
                    basicFields.style.display = 'none';
                } else {
                    // Show basic fields, hide B2B/Advanced fields
                    advanceFields.style.display = 'none';
                    basicFields.style.display = 'block';
                }
            });
        });

        // Payment buttons
        document.querySelectorAll('.payment-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.payment-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                document.getElementById('paymentMethod').value = this.dataset.payment;
            });
        });

        // Submit bill
        function submitBill(event) {
            event.preventDefault();
            
            console.log('Submit bill function called');
            console.log('Cart:', cart);

            if (Object.keys(cart).length === 0) {
                alert('Please add items to cart first!');
                return;
            }

            const formData = new FormData(event.target);
            const billingTypeTab = document.querySelector('.billing-type-tab.active');
            console.log('Billing type tab:', billingTypeTab);
            
            if (!billingTypeTab) {
                console.error('No billing type tab found!');
                alert('Error: Billing type not selected. Please refresh the page.');
                return;
            }
            
            const billingType = billingTypeTab.dataset.type;
            console.log('Billing type:', billingType);
            console.log('Billing type:', billingType);
            
            // Validate advanced fields if in advance mode
            if (billingType === 'advance') {
                const customerName = formData.get('customerNameAdvance');
                const customerPhone = formData.get('customerPhoneAdvance');
                const invoiceType = formData.get('invoiceType');
                
                console.log('Advanced mode - Name:', customerName, 'Phone:', customerPhone);
                
                if (!customerName || customerName.trim() === '') {
                    alert('Customer name is required for advanced billing!');
                    return;
                }
                
                if (!customerPhone || customerPhone.trim() === '') {
                    alert('Mobile number is required for advanced billing!');
                    return;
                }
                
                // Validate GSTIN if B2B
                if (invoiceType === 'B2B') {
                    const gstin = formData.get('customerGSTIN');
                    if (!gstin || gstin.trim() === '') {
                        const confirmProceed = confirm('GSTIN is recommended for B2B invoices. Do you want to proceed without GSTIN?');
                        if (!confirmProceed) {
                            return;
                        }
                    }
                }
            }
            
            // Prepare cart items
            const items = Object.values(cart).map(item => ({
                productId: item.id,
                quantity: item.quantity,
                discount: 0,
                discountType: 'fixed'
            }));
            
            console.log('Items to submit:', items);

            // Get customer details based on billing type
            let customerName = '';
            let customerPhone = '';
            
            if (billingType === 'advance') {
                customerName = formData.get('customerNameAdvance') || '';
                customerPhone = formData.get('customerPhoneAdvance') || '';
            } else {
                customerName = formData.get('customerName') || '';
                customerPhone = formData.get('customerPhone') || '';
            }

            const billData = {
                items: JSON.stringify(items),
                discount: document.getElementById('discountPercent').value,
                discountType: 'percentage',
                customerName: customerName,
                customerPhone: customerPhone,
                paymentMethod: formData.get('paymentMethod') || 'cash',
                amountPaid: formData.get('amountPaid') || '',
                customerType: billingType === 'advance' ? (formData.get('invoiceType') || 'B2C') : 'B2C',
                billingType: billingType
            };
            
            console.log('Bill data to submit:', billData);
            console.log('Bill data to submit:', billData);
            
            // Add B2B fields if in advance mode
            if (billingType === 'advance') {
                billData.customerGSTIN = formData.get('customerGSTIN') || '';
                billData.billingAddress = formData.get('billingAddress') || '';
                billData.stateCode = formData.get('stateCode') || '';
                billData.hsnCode = formData.get('hsnCode') || '';
                billData.invoiceType = formData.get('invoiceType') || 'B2C';
            }

            // Show loading
            const submitBtn = event.target.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Creating Bill...';
            submitBtn.disabled = true;
            
            console.log('Sending request to /sales/create...');

            // Submit to server
            fetch('/sales/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(billData)
            })
            .then(response => {
                console.log('Response status:', response.status);
                return response.json();
            })
            .then(data => {
                console.log('Response data:', data);
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;

                if (data.success) {
                    // Close modal
                    closePrintModal();
                    
                    // Show success message
                    alert(`Bill ${data.billNumber} created successfully!`);
                    
                    // Auto-open print window
                    const printWindow = window.open(`/bill/print/${data.billId}`, '_blank', 'width=800,height=600');
                    
                    // Wait a moment then auto-print
                    if (printWindow) {
                        setTimeout(() => {
                            printWindow.print();
                        }, 1000);
                    }
                    
                    // Reset current person's cart
                    carts[currentTable] = {};
                    cart = carts[currentTable];
                    
                    // Update product card displays
                    document.querySelectorAll('.product-card').forEach(card => {
                        card.classList.remove('in-cart');
                        card.querySelector('.quantity-controls').style.display = 'none';
                        card.querySelector('.remove-btn').style.display = 'none';
                        card.querySelector('.qty-display').textContent = '0';
                    });
                    
                    // Update totals
                    updateTotals();
                    
                    // Clear form
                    event.target.reset();
                    
                    // Reset discount
                    document.getElementById('discountPercent').value = '0';
                    
                    // Reset billing type to basic
                    document.querySelectorAll('.billing-type-tab').forEach(t => {
                        t.classList.remove('active');
                        t.innerHTML = t.innerHTML.replace('bi-circle-fill', 'bi-circle');
                    });
                    document.querySelector('.billing-type-tab[data-type="basic"]').classList.add('active');
                    document.querySelector('.billing-type-tab[data-type="basic"]').innerHTML = document.querySelector('.billing-type-tab[data-type="basic"]').innerHTML.replace('bi-circle', 'bi-circle-fill');
                    document.getElementById('advanceFields').style.display = 'none';
                    document.getElementById('basicFields').style.display = 'block';
                } else {
                    alert('Error: ' + (data.message || 'Failed to create bill'));
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
                alert('An error occurred while creating the bill. Please try again.');
            });
        }

        // Menu dropdown toggle for employees
        const menuToggleBtn = document.getElementById('menuToggleBtn');
        const menuDropdown = document.getElementById('menuDropdown');
        
        if (menuToggleBtn && menuDropdown) {
            menuToggleBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                menuDropdown.classList.toggle('show');
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (menuDropdown.classList.contains('show') && 
                    !menuToggleBtn.contains(e.target) && 
                    !menuDropdown.contains(e.target)) {
                    menuDropdown.classList.remove('show');
                }
            });
        }

        // Menu dropdown toggle for admin
        const adminMenuToggleBtn = document.getElementById('adminMenuToggleBtn');
        const adminMenuDropdown = document.getElementById('adminMenuDropdown');
        
        if (adminMenuToggleBtn && adminMenuDropdown) {
            adminMenuToggleBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                adminMenuDropdown.classList.toggle('show');
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (adminMenuDropdown.classList.contains('show') && 
                    !adminMenuToggleBtn.contains(e.target) && 
                    !adminMenuDropdown.contains(e.target)) {
                    adminMenuDropdown.classList.remove('show');
                }
            });
        }
    </script>

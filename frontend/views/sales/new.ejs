        function updateModalTotals() {
            const discountInput = document.getElementById('modalDiscountValue');
            const discountDisplayDiv = document.getElementById('modalDiscountDisplay');
            const discountLabel = document.getElementById('modalDiscountLabel');
            const discountAmountSpan = document.getElementById('modalDiscountAmount');
            const modalSubtotalSpan = document.getElementById('modalSubtotal');
            const modalTotalSpan = document.getElementById('modalTotal');
            const helpText = document.getElementById('discountHelp');

            // Calculate subtotal
            let subtotal = 0;
            Object.values(cart).forEach(item => { subtotal += item.price * item.quantity; });

            // Get discount value
            let discountValue = parseFloat(discountInput.value) || 0;
            let discountAmount = 0;

            // Validation and calculation based on type
            if (modalDiscountType === 'percentage') {
                if (discountValue > 100) {
                    discountValue = 100;
                    discountInput.value = 100;
                    helpText.textContent = 'âš ï¸ Maximum 100% discount';
                    helpText.style.color = '#f59e0b';
                    setTimeout(() => {
                        helpText.textContent = 'Enter percentage (0-100%)';
                        helpText.style.color = '#6c757d';
                    }, 2000);
                } else if (discountValue < 0) {
                    discountValue = 0;
                    discountInput.value = 0;
                }
                discountAmount = (subtotal * discountValue) / 100;
                discountLabel.textContent = discountValue + '%';
            } else {
                if (discountValue > subtotal) {
                    discountValue = subtotal;
                    discountInput.value = subtotal.toFixed(2);
                    helpText.textContent = 'âš ï¸ Discount cannot exceed subtotal';
                    helpText.style.color = '#f59e0b';
                    setTimeout(() => {
                        helpText.textContent = 'Enter amount in rupees';
                        helpText.style.color = '#6c757d';
                    }, 2000);
                } else if (discountValue < 0) {
                    discountValue = 0;
                    discountInput.value = 0;
                }
                discountAmount = discountValue;
                discountLabel.textContent = 'â‚¹' + discountValue.toFixed(2);
            }

            // Display or hide discount section
            if (discountAmount > 0) {
                discountDisplayDiv.style.display = 'block';
                discountAmountSpan.textContent = discountAmount.toFixed(2);
            } else {
                discountDisplayDiv.style.display = 'none';
            }

            // Calculate taxable and GST
            const taxable = subtotal - discountAmount;
            const gst = calcGSTAmounts(taxable);
            const total = parseFloat((taxable + gst.total).toFixed(2));

            // Update display
            modalSubtotalSpan.textContent = subtotal.toFixed(2);
            modalTotalSpan.textContent = total.toFixed(2);

            // Update hidden fields for form submission
            document.getElementById('billDiscount').value = discountValue;
            document.getElementById('billDiscountType').value = modalDiscountType;

            // Recalculate due if amount paid is entered
            calculateDue();
        }

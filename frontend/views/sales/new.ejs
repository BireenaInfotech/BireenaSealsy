            const discountAmount  = (subtotal * discountPercent) / 100;
            const taxable = subtotal - discountAmount;
            console.log(`ðŸ“Š [updateTotals] subtotal=${subtotal}, taxable=${taxable}, Using GST rates: CGST=${GST_CGST}%, SGST=${GST_SGST}%`);
            const gst     = calcGSTAmounts(taxable);
            const total   = parseFloat((taxable + gst.total).toFixed(2));
            console.log(`ðŸ“Š [updateTotals] GST=${gst.total}, FINAL TOTAL=${total}`);

            document.getElementById('header-total').textContent = total.toFixed(2);
            document.getElementById(`table${currentTable}-total`).textContent = total.toFixed(2);

            if (document.getElementById('modalTotal')) {

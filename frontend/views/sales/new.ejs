        // Returns { cgst, sgst, igst, total } for a given taxable amount
        function calcGSTAmounts(taxable) {
            const invoiceType = document.getElementById('invoiceType');
            const activeTab = document.querySelector('.billing-type-tab.active');
            const isAdvance = activeTab && activeTab.dataset.type === 'advance';
            // GST applies ONLY when ADVANCE tab is active AND invoice type is B2B
            const isB2B = isAdvance && invoiceType && invoiceType.value === 'B2B';
            if (!GST_ENABLED || !isB2B) return { cgst: 0, sgst: 0, igst: 0, total: 0 };
            
            // For now, assume intra-state (CGST + SGST), not inter-state (IGST)
            // Backend will handle inter-state logic based on GSTINs
            const cgst  = parseFloat(((taxable * GST_CGST) / 100).toFixed(2));
            const sgst  = parseFloat(((taxable * GST_SGST) / 100).toFixed(2));
            const igst  = 0; // Frontend doesn't determine inter-state, backend does
            const gstTotal = cgst + sgst; // Only CGST + SGST for display
            
            console.log(`[FRONTEND GST] taxable=${taxable}, CGST=${GST_CGST}% = â‚¹${cgst}, SGST=${GST_SGST}% = â‚¹${sgst}, Total GST=${gstTotal}`);
            return { cgst, sgst, igst, total: gstTotal };
        }

        function updateTotals() {

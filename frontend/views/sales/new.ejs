<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Content-Security-Policy" content="
        default-src 'self';
        script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net;
        style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net;
        font-src 'self' https://cdn.jsdelivr.net;
        img-src 'self' data: https: http:;
        connect-src 'self';
    ">
    <link rel="icon" type="image/x-icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ›’</text></svg>">
    <title>POS - <%= typeof user !== 'undefined' && user && user.shopName ? user.shopName : 'Bireena Bakery' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/pos.css">
    <style>
        /* Prevent loading spinner if resources fail */
        body { opacity: 1 !important; }
        .loading { display: none !important; }

        /* Branch Filter Responsive Styles */
        @media (max-width: 768px) {
            .branch-filter-bar {
                gap: 8px !important;
                padding: 8px !important;
            }
            .branch-filter-bar > div {
                min-width: 200px !important;
            }
            .branch-filter-bar select {
                font-size: 12px !important;
                padding: 4px 8px !important;
            }
            .branch-filter-bar > span {
                font-size: 11px !important;
                flex-basis: 100%;
                text-align: center;
            }
        }

        @media (max-width: 480px) {
            .branch-filter-bar {
                flex-direction: column;
                align-items: stretch !important;
            }
            .branch-filter-bar > div {
                min-width: 100% !important;
            }
            .branch-filter-bar select {
                max-width: 100% !important;
            }
            .branch-filter-bar > span {
                text-align: left;
                padding-left: 4px;
            }
        }

        /* Cake Weight Selection Modal Styles */
        .cake-weight-options {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .cake-weight-btn {
            width: 100%;
            padding: 20px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            transition: all 0.2s;
            text-align: center;
        }

        .cake-weight-btn:hover {
            background: #fef3c7;
            border-color: #f59e0b;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .cake-weight-btn:active {
            transform: translateY(0);
        }
    </style>
</head>
<body>
    <div class="pos-container">
        <!-- Header -->
        <div class="pos-header">
            <div class="pos-header-left">
                <% if (typeof user !== 'undefined' && user && user.role === 'staff') { %>
                    <!-- Employee Menu Toggle with Dropdown -->
                    <div class="menu-dropdown-container">
                        <button class="menu-toggle" id="menuToggleBtn">
                            <i class="bi bi-list"></i>
                        </button>
                        <div class="menu-dropdown" id="menuDropdown">
                            <a href="/dashboard" class="menu-dropdown-item">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                            <a href="/sales" class="menu-dropdown-item">
                                <i class="bi bi-receipt"></i> Sales History
                            </a>
                            <a href="/reports" class="menu-dropdown-item">
                                <i class="bi bi-bar-chart-fill"></i> Reports
                            </a>
                            <a href="/logout" class="menu-dropdown-item logout-item">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Admin Menu Toggle with Dropdown -->
                    <div class="menu-dropdown-container">
                        <button class="menu-toggle" id="adminMenuToggleBtn">
                            <i class="bi bi-list"></i>
                        </button>
                        <div class="menu-dropdown" id="adminMenuDropdown">
                            <a href="/dashboard" class="menu-dropdown-item">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                            <a href="/inventory" class="menu-dropdown-item">
                                <i class="bi bi-box-seam"></i> Inventory
                            </a>
                            <a href="/sales" class="menu-dropdown-item">
                                <i class="bi bi-receipt"></i> Sales History
                            </a>
                            <a href="/reports" class="menu-dropdown-item">
                                <i class="bi bi-bar-chart-fill"></i> Reports
                            </a>
                            <a href="/employees" class="menu-dropdown-item">
                                <i class="bi bi-people-fill"></i> Employees
                            </a>
                            <a href="/logout" class="menu-dropdown-item logout-item">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </div>
                    </div>
                <% } %>
                
                <div class="table-tabs">
                    <button class="table-tab active" data-table="1">PERS 1<br><small>â‚¹<span id="table1-total">0.00</span></small></button>
                    <button class="table-tab" data-table="2">PERS 2<br><small>â‚¹<span id="table2-total">0.00</span></small></button>
                    <button class="table-tab" data-table="3">PERS 3<br><small>â‚¹<span id="table3-total">0.00</span></small></button>
                    <button class="table-tab" data-table="4">PERS 4<br><small>â‚¹<span id="table4-total">0.00</span></small></button>
                    <button class="table-tab" data-table="5">PERS 5<br><small>â‚¹<span id="table5-total">0.00</span></small></button>
                    <button class="add-person-btn" id="addPersonBtn" onclick="addNewPerson()">
                        <i class="bi bi-plus-circle"></i>
                    </button>
                </div>
            </div>
            
            <div class="pos-header-right">
                <button class="print-btn" onclick="openPrintModal()">
                    <i class="bi bi-printer-fill"></i> PRINT
                    <span class="total-display">â‚¹<span id="header-total">0.00</span></span>
                </button>
                <button class="btn btn-outline-light btn-sm" onclick="window.location.href='/logout'">
                    <i class="bi bi-box-arrow-right"></i>
                </button>
            </div>
        </div>

        <!-- Body -->
        <div class="pos-body">
            <!-- Category Sidebar -->
            <div class="category-sidebar">
                <button class="new-category-btn">NEW<br>CATEGORY</button>
                <div class="category-item active" data-category="all">
                    <div class="category-name">ALL</div>
                    <div class="category-count">(<%= products.length %>)</div>
                </div>
                <% 
                const categories = {};
                products.forEach(p => {
                    const cat = p.category || 'Other';
                    if (!categories[cat]) categories[cat] = 0;
                    categories[cat]++;
                });
                Object.keys(categories).forEach(cat => { 
                %>
                    <div class="category-item" data-category="<%= cat %>">
                        <div class="category-name"><%= cat.toUpperCase() %></div>
                        <div class="category-count">(<%= categories[cat] %>)</div>
                    </div>
                <% }); %>
            </div>

            <!-- Products Area -->
            <div class="products-area">
                <% if (typeof user !== 'undefined' && user) { %>
                <div class="branch-filter-bar" style="display:flex; flex-wrap:wrap; align-items:center; gap:10px; padding:8px 12px; background:#f0f0ff; border-bottom:1px solid #d0d0f0;">
                    <div style="display:flex; align-items:center; gap:10px; flex:1; min-width:250px;">
                        <i class="bi bi-funnel-fill" style="color:#6366f1; font-size:16px;"></i>
                        <span style="font-weight:600; font-size:13px; color:#374151; white-space:nowrap;">Branch:</span>
                        <select id="branchFilter"
                            onchange="window.location.href='/sales/new?employee='+this.value"
                            style="flex:1; min-width:180px; max-width:280px; padding:5px 10px; border-radius:8px; border:1.5px solid #6366f1; font-size:13px; font-weight:600; color:#374151; background:#fff; cursor:pointer;">
                            <% if (user.role === 'admin') { %>
                                <option value="self" <%= (typeof selectedEmployeeId !== 'undefined' && selectedEmployeeId === 'self') ? 'selected' : '' %>>
                                    &#128100; My Products
                                </option>
                                <option value="all" <%= (typeof selectedEmployeeId !== 'undefined' && selectedEmployeeId === 'all') ? 'selected' : '' %>>
                                    &#127978; All Products (Every Branch)
                                </option>
                                <% if (typeof employees !== 'undefined' && employees.length > 0) { %>
                                    <optgroup label="â”€â”€ Employees â”€â”€">
                                    <% employees.forEach(function(emp) { %>
                                        <option value="<%= emp._id %>" <%= (typeof selectedEmployeeId !== 'undefined' && selectedEmployeeId === emp._id.toString()) ? 'selected' : '' %>>
                                            &#128101; <%= emp.fullName || emp.username %> &mdash; <%= emp.branch || 'Main Branch' %>
                                        </option>
                                    <% }); %>
                                    </optgroup>
                                <% } %>
                            <% } else { %>
                                <option value="admin" <%= (typeof selectedEmployeeId !== 'undefined' && selectedEmployeeId === 'admin') ? 'selected' : '' %>>
                                    &#128100; Admin's Products
                                </option>
                                <option value="self" <%= (typeof selectedEmployeeId !== 'undefined' && selectedEmployeeId === 'self') ? 'selected' : '' %>>
                                    &#128101; My Products
                                </option>
                            <% } %>
                        </select>
                    </div>
                    <span style="font-size:12px; color:#6b7280; white-space:nowrap;">
                        <strong style="color:#6366f1;"><%= products.length %></strong> products
                        <% if (user.role === 'admin') { %>
                            <% if (typeof selectedEmployeeId !== 'undefined' && selectedEmployeeId !== 'self' && selectedEmployeeId !== 'all' && typeof employees !== 'undefined') { %>
                                &nbsp;&bull;&nbsp;
                                <% const selEmp = employees.find(e => e._id.toString() === selectedEmployeeId); %>
                                <%= selEmp ? (selEmp.fullName || selEmp.username) : '' %>
                            <% } else if (typeof selectedEmployeeId !== 'undefined' && selectedEmployeeId === 'all') { %>
                                &nbsp;&bull;&nbsp;All branches
                            <% } %>
                        <% } else { %>
                            <% if (typeof selectedEmployeeId !== 'undefined' && selectedEmployeeId === 'admin' && typeof adminUser !== 'undefined' && adminUser) { %>
                                &nbsp;&bull;&nbsp;<%= adminUser.fullName || adminUser.username %>
                            <% } else if (typeof selectedEmployeeId !== 'undefined' && selectedEmployeeId === 'self') { %>
                                &nbsp;&bull;&nbsp;<%= user.fullName || user.username %>
                            <% } %>
                        <% } %>
                    </span>
                </div>
                <% } %>
                <div class="search-bar">
                    <input type="text" class="search-input" id="productSearch" placeholder="Search item...">
                </div>

                <div class="products-grid" id="productsGrid">
                    <% products.forEach(product => { %>
                        <div class="product-card" 
                             data-id="<%= product._id %>"
                             data-name="<%= product.name %>"
                             data-price="<%= product.price %>"
                             data-halfkgprice="<%= product.halfKgPrice || 0 %>"
                             data-onekgprice="<%= product.oneKgPrice || 0 %>"
                             data-pastryprice="<%= product.pastryPrice || 0 %>"
                             data-stock="<%= product.stock %>"
                             data-unit="<%= product.unit || 'piece' %>"
                             data-gramamount="<%= product.gramAmount || 0 %>"
                             data-category="<%= product.category || 'Other' %>">
                            <% if (product.image && product.image.trim() !== '') { %>
                                <img src="<%= product.image %>" 
                                     alt="<%= product.name %>" 
                                     class="product-image"
                                     loading="lazy"
                                     onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                <div class="product-image product-image-fallback" style="display:none; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); align-items: center; justify-content: center; color: white; font-size: 24px; font-weight: bold;">
                                    <%= product.name.substring(0,2).toUpperCase() %>
                                </div>
                            <% } else { %>
                                <div class="product-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 24px; font-weight: bold;">
                                    <%= product.name.substring(0,2).toUpperCase() %>
                                </div>
                            <% } %>
                            <div class="product-name">
                                <%= product.name %>
                                <% if (product.unit === 'gms' && product.gramAmount > 0) { %>
                                    <small style="display: block; color: #6b7280; font-size: 11px;"><%= product.gramAmount %>g</small>
                                <% } %>
                            </div>
                            <div class="product-price-stock">
                                <% if (product.category && product.category.toLowerCase().includes('cake') && (product.halfKgPrice > 0 || product.oneKgPrice > 0)) { %>
                                    <div style="font-size: 12px; line-height: 1.3;">
                                        <span class="product-price" style="display: block;">Â½kg: â‚¹<%= (product.halfKgPrice || 0).toFixed(2) %></span>
                                        <span class="product-price" style="display: block;">1kg: â‚¹<%= (product.oneKgPrice || 0).toFixed(2) %></span>
                                        <% if (product.pastryPrice > 0) { %>
                                        <span class="product-price" style="display: block; font-size: 11px;">Pastry: â‚¹<%= (product.pastryPrice || 0).toFixed(2) %></span>
                                        <% } %>
                                    </div>
                                <% } else { %>
                                    <span class="product-price">â‚¹<%= product.price.toFixed(2) %></span>
                                <% } %>
                                <% if (product.trackStock === false || product.stock === 0) { %>
                                    <span class="product-stock" style="color: #10b981;">Made to Order</span>
                                <% } else { %>
                                    <span class="product-stock <%= product.stock < 10 ? 'low' : '' %>">
                                        Stock <%= product.stock.toFixed(1) %>
                                    </span>
                                <% } %>
                            </div>
                            <div class="quantity-controls" style="display:none;">
                                <button class="qty-btn" onclick="event.stopPropagation(); decreaseQty(this)">-</button>
                                <span class="qty-display" onclick="event.stopPropagation(); editQuantity(this)">0.5</span>
                                <button class="qty-btn" onclick="event.stopPropagation(); increaseQty(this)">+</button>
                            </div>
                            <button class="remove-btn" style="display:none;" onclick="event.stopPropagation(); removeFromCart(this)">Ã—</button>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="pos-footer">
            <div class="discount-section">
                <label>Discount %</label>
                <input type="number" class="discount-input" id="discountPercent" value="0" min="0" max="100" onchange="updateTotals()">
            </div>
            <button class="kot-btn">KOT/TOKEN</button>
            <button class="preview-btn" onclick="openPrintModal()">PREVIEW</button>
        </div>
    </div>

    <!-- Print Bill Modal -->
    <div class="print-modal" id="printModal">
        <div class="print-modal-content">
            <div class="modal-header">
                <h4>Print Bill</h4>
                <button class="close-modal" onclick="closePrintModal()">Ã—</button>
            </div>

            <div class="billing-type-tabs">
                <button class="billing-type-tab active" data-type="basic">
                    <i class="bi bi-circle-fill"></i> BASIC
                </button>
                <button class="billing-type-tab" data-type="advance">
                    <i class="bi bi-circle"></i> ADVANCE
                </button>
            </div>

            <div class="payment-buttons">
                <button class="payment-btn active" data-payment="cash">CASH</button>
                <button class="payment-btn" data-payment="upi">UPI</button>
                <button class="payment-btn" data-payment="due">Due</button>
            </div>

            <form id="billForm" onsubmit="submitBill(event)">
                <!-- B2B Advanced Fields (Hidden by default) -->
                <div id="advanceFields" style="display: none;">
                    <div class="form-group">
                        <label>Invoice Type <span class="text-danger">*</span></label>
                        <select class="form-control" name="invoiceType" id="invoiceType">
                            <option value="B2B">B2B (Business to Business)</option>
                            <option value="B2C">B2C (Business to Customer)</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Customer GSTIN (Optional for B2B)</label>
                        <input type="text" class="form-control" name="customerGSTIN" id="customerGSTIN" placeholder="Enter 15-digit GSTIN" maxlength="15">
                        <small class="text-muted">Required for B2B invoices</small>
                    </div>

                    <div class="form-group">
                        <label>Customer Billing Address</label>
                        <textarea class="form-control" name="billingAddress" id="billingAddress" rows="2" placeholder="Enter billing address"></textarea>
                    </div>

                    <div class="form-group">
                        <label>State Code</label>
                        <select class="form-control" name="stateCode" id="stateCode">
                            <option value="">-- Select State --</option>
                            <option value="01">01 - Jammu & Kashmir</option>
                            <option value="02">02 - Himachal Pradesh</option>
                            <option value="03">03 - Punjab</option>
                            <option value="04">04 - Chandigarh</option>
                            <option value="05">05 - Uttarakhand</option>
                            <option value="06">06 - Haryana</option>
                            <option value="07">07 - Delhi</option>
                            <option value="08">08 - Rajasthan</option>
                            <option value="09">09 - Uttar Pradesh</option>
                            <option value="10">10 - Bihar</option>
                            <option value="11">11 - Sikkim</option>
                            <option value="12">12 - Arunachal Pradesh</option>
                            <option value="13">13 - Nagaland</option>
                            <option value="14">14 - Manipur</option>
                            <option value="15">15 - Mizoram</option>
                            <option value="16">16 - Tripura</option>
                            <option value="17">17 - Meghalaya</option>
                            <option value="18">18 - Assam</option>
                            <option value="19">19 - West Bengal</option>
                            <option value="20">20 - Jharkhand</option>
                            <option value="21">21 - Odisha</option>
                            <option value="22">22 - Chhattisgarh</option>
                            <option value="23">23 - Madhya Pradesh</option>
                            <option value="24">24 - Gujarat</option>
                            <option value="26">26 - Dadra & Nagar Haveli and Daman & Diu</option>
                            <option value="27">27 - Maharashtra</option>
                            <option value="29">29 - Karnataka</option>
                            <option value="30">30 - Goa</option>
                            <option value="32">32 - Kerala</option>
                            <option value="33">33 - Tamil Nadu</option>
                            <option value="34">34 - Puducherry</option>
                            <option value="35">35 - Andaman & Nicobar</option>
                            <option value="36">36 - Telangana</option>
                            <option value="37">37 - Andhra Pradesh</option>
                            <option value="38">38 - Ladakh</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>HSN/SAC Code (Optional)</label>
                        <input type="text" class="form-control" name="hsnCode" id="hsnCode" placeholder="Enter HSN/SAC code">
                    </div>

                    <div class="form-group">
                        <label>Customer Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="customerNameAdvance" id="customerNameAdvance" placeholder="Enter customer name">
                    </div>

                    <div class="form-group">
                        <label>Mobile Number <span class="text-danger">*</span></label>
                        <input type="tel" class="form-control" name="customerPhoneAdvance" id="customerPhoneAdvance" placeholder="Enter mobile number" maxlength="10">
                    </div>

                    <div class="form-group">
                        <label>Address (optional)</label>
                        <textarea class="form-control" name="customerAddressAdvance" id="customerAddressAdvance" placeholder="Enter customer address" rows="2"></textarea>
                    </div>
                </div>

                <!-- Basic Fields (Visible by default) -->
                <div id="basicFields">
                    <div class="form-group">
                        <label>Customer Name (optional)</label>
                        <input type="text" class="form-control" name="customerName" placeholder="Enter customer name">
                    </div>

                    <div class="form-group">
                        <label>Mobile Number (optional)</label>
                        <input type="tel" class="form-control" name="customerPhone" placeholder="Enter mobile number" maxlength="10">
                    </div>

                    <div class="form-group">
                        <label>Address (optional)</label>
                        <textarea class="form-control" name="customerAddress" placeholder="Enter customer address" rows="2"></textarea>
                    </div>
                </div>

                <!-- Discount Section -->
                <div class="form-group" style="border-top: 1px solid #e0e0e0; padding-top: 15px; margin-top: 15px;">
                    <label style="font-weight: 600; color: #6366f1;">ðŸ’° Discount</label>
                    <div style="display: flex; gap: 10px; margin-bottom: 10px;">
                        <button type="button" class="btn btn-sm" id="discountPercentBtn" onclick="setDiscountType('percentage')" style="flex: 1; background: #6366f1; color: white; border: 2px solid #6366f1;">% Percentage</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="discountRsBtn" onclick="setDiscountType('fixed')" style="flex: 1; border: 2px solid #ddd;">â‚¹ Rupees</button>
                    </div>
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <input type="number" class="form-control" id="modalDiscountValue" value="0" min="0" step="0.01" placeholder="Enter discount" oninput="updateModalTotals()" style="flex: 1;">
                        <span id="discountDisplayType" style="font-weight: 600; color: #6366f1; min-width: 30px;">%</span>
                    </div>
                    <small class="text-muted" id="discountHelp">Enter percentage (0-100%)</small>
                </div>

                <div class="form-group">
                    <label>Amount Paid</label>
                    <input type="number" class="form-control" name="amountPaid" id="amountPaid" step="0.01" min="0" placeholder="Enter amount paid" onchange="calculateDue()">
                    <small class="text-muted">Leave empty for full payment or enter partial amount</small>
                </div>

                <div class="form-group" id="dueDisplay" style="display:none;">
                    <div class="alert alert-warning">
                        <strong>Due Amount:</strong> â‚¹<span id="dueAmount">0.0</span>
                    </div>
                </div>

                <div class="whatsapp-checkbox">
                    <input type="checkbox" id="whatsappShare" name="whatsappShare">
                    <label for="whatsappShare">
                        <i class="bi bi-whatsapp" style="color: #25D366;"></i>
                        Share bill on whatsapp
                    </label>
                </div>

                <div class="cart-summary">
                    <div id="modalCartItems"></div>
                    <div style="border-top: 1px solid #eee; padding-top: 8px; margin-top: 8px; font-size: 13px; color: #666;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 4px;">
                            <span>Subtotal:</span>
                            <span>â‚¹<span id="modalSubtotal">0.00</span></span>
                        </div>
                        <div id="modalDiscountDisplay" style="display: none; color: #f59e0b; margin-bottom: 4px;">
                            <div style="display: flex; justify-content: space-between;">
                                <span>Discount (<span id="modalDiscountLabel"></span>):</span>
                                <span>- â‚¹<span id="modalDiscountAmount">0.00</span></span>
                            </div>
                        </div>
                    </div>
                    <div class="cart-total">
                        <span>Total:</span>
                        <span>â‚¹<span id="modalTotal">0.00</span></span>
                    </div>
                </div>

                <input type="hidden" name="items" id="billItems">
                <input type="hidden" name="paymentMethod" id="paymentMethod" value="cash">
                <input type="hidden" name="discount" id="billDiscount">
                <input type="hidden" name="discountType" id="billDiscountType" value="percentage">
                <input type="hidden" name="customerAddress" id="hiddenCustomerAddress">

                <button type="submit" class="print-bill-btn">PRINT BILL</button>
            </form>
        </div>
    </div>

    <!-- Cake Weight Selection Modal -->
    <div class="print-modal" id="cakeWeightModal">
        <div class="print-modal-content" style="max-width: 400px;">
            <div class="modal-header">

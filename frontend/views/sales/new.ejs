        function calculateDue() {
            const amountPaidInput = document.getElementById('amountPaid');
            const dueDisplay = document.getElementById('dueDisplay');
            const dueAmount  = document.getElementById('dueAmount');
            if (!amountPaidInput || !dueDisplay) return;

            const amountPaid = parseFloat(amountPaidInput.value) || 0;

            let subtotal = 0;
            Object.values(cart).forEach(item => { subtotal += item.price * item.quantity; });
            
            // Use modal discount if available
            const modalDiscountInput = document.getElementById('modalDiscountValue');
            let discountAmount = 0;
            if (modalDiscountInput) {
                const discountValue = parseFloat(modalDiscountInput.value) || 0;
                if (modalDiscountType === 'percentage') {
                    discountAmount = (subtotal * discountValue) / 100;
                } else {
                    discountAmount = discountValue;
                }
            } else {
                // Fallback to cart discount
                const discountPercent = parseFloat(document.getElementById('discountPercent').value) || 0;
                discountAmount = (subtotal * discountPercent) / 100;
            }
            
            const taxable = subtotal - discountAmount;
            const gst     = calcGSTAmounts(taxable);
            // Use same rounding as backend to avoid mismatch
            const total   = parseFloat((taxable + gst.total).toFixed(2));

            const due = Math.max(0, parseFloat((total - amountPaid).toFixed(2)));
            console.log(`[calculateDue] amountPaid=${amountPaid}, total=${total}, due=${due}`);
            if (amountPaid > 0 && amountPaid < total) {
                dueDisplay.style.display = 'block';
                dueAmount.textContent = due.toFixed(2);
            } else {

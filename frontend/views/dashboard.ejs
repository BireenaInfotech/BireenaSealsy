                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-12">
                <div class="card stat-card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-2">Total Revenue</h6>
                                <h2 class="mb-0">â‚¹<%= (stats.totalRevenue / 1000).toFixed(1) %>K</h2>
                                <p class="mb-0" style="font-size: 0.875rem;">All Time</p>
                            </div>
                            <i class="bi bi-cash-stack" style="font-size: 3rem; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ðŸŽ¯ EXPIRY ALERTS -->
        <% if ((typeof stats.expiringProducts !== 'undefined' && stats.expiringProducts > 0) || (typeof stats.expiredProducts !== 'undefined' && stats.expiredProducts > 0)) { %>
        <div class="row g-4 mb-4">
            <% if (typeof stats.expiringProducts !== 'undefined' && stats.expiringProducts > 0) { %>
            <div class="col-md-6 col-12">
                <div class="alert alert-warning border-warning d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 2rem;"></i>
                    <div class="flex-grow-1">
                        <h5 class="alert-heading mb-1">
                            <strong><%= stats.expiringProducts %></strong> Product<%= stats.expiringProducts > 1 ? 's' : '' %> Expiring Soon!
                        </h5>
                        <p class="mb-0">Products expiring within 30 days need your attention.</p>
                    </div>
                    <a href="/inventory/expiring-soon" class="btn btn-warning">
                        View Now <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
            <% } %>
            <% if (typeof stats.expiredProducts !== 'undefined' && stats.expiredProducts > 0) { %>
            <div class="col-md-6 col-12">
                <div class="alert alert-danger border-danger d-flex align-items-center" role="alert">
                    <i class="bi bi-x-circle-fill me-3" style="font-size: 2rem;"></i>
                    <div class="flex-grow-1">
                        <h5 class="alert-heading mb-1">
                            <strong><%= stats.expiredProducts %></strong> Product<%= stats.expiredProducts > 1 ? 's' : '' %> Expired!
                        </h5>
                        <p class="mb-0">These products are past their expiry date.</p>
                    </div>
                    <a href="/inventory/expired" class="btn btn-danger">
                        View Now <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
        <% } %>

        <!-- Employee Reports (Admin Only) -->

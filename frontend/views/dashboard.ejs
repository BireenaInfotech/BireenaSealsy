        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-building"></i> My Branch Performance
                        </h5>
                        <span class="badge bg-primary">Branch Manager</span>
                    </div>
                    <div class="card-body">
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="bg-white text-success rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-person-circle" style="font-size: 1.2rem;"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-0">My Branch - <%= ownBranchReport.employee.fullName %></h6>
                                        <small class="opacity-75">Branch Manager: <%= ownBranchReport.employee.username %></small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Branch Statistics Cards - Horizontal for Employees -->

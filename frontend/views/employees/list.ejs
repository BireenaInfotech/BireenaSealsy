<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employees - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2><i class="bi bi-people"></i> Employee Management</h2>
                <% 
                    const currentCount = employeeCount || 0;
                    const maxLimit = employeeLimit || 2;
                    const percentage = (currentCount / maxLimit) * 100;
                    const isAtLimit = currentCount >= maxLimit;
                %>
                <div style="margin-top: 10px;">
                    <span style="font-size: 14px; color: <%= isAtLimit ? '#dc3545' : percentage > 70 ? '#ff9800' : '#28a745' %>;">
                        <i class="bi <%= isAtLimit ? 'bi-exclamation-triangle-fill' : 'bi-info-circle-fill' %>"></i>
                        <strong><%= currentCount %></strong> / <%= maxLimit %> Employees
                        <% if (isAtLimit) { %>
                            <span style="color: #dc3545; font-weight: 600;">(Limit Reached - Contact Super Admin)</span>
                        <% } %>
                    </span>
                    <div class="progress" style="height: 8px; margin-top: 5px; max-width: 300px;">
                        <div class="progress-bar <%= isAtLimit ? 'bg-danger' : percentage > 70 ? 'bg-warning' : 'bg-success' %>" 
                             role="progressbar" 
                             style="width: <%= Math.min(100, percentage) %>%;" 
                             aria-valuenow="<%= currentCount %>" 
                             aria-valuemin="0" 
                             aria-valuemax="<%= maxLimit %>">
                        </div>
                    </div>
                </div>
            </div>
            <% if (currentCount < maxLimit) { %>
                <a href="/employees/add" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add Employee
                </a>
            <% } else { %>
                <button class="btn btn-secondary" disabled title="Employee limit reached. Contact super admin to increase limit.">
                    <i class="bi bi-lock-fill"></i> Limit Reached
                </button>
            <% } %>
        </div>

        <div class="card">
            <div class="card-body">
                <% if (employees.length === 0) { %>
                    <p class="text-center text-muted">No employees added yet</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Full Name</th>
                                    <th>Employee ID</th>
                                    <th>Branch</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Created Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% employees.forEach((employee, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <i class="bi bi-person-circle"></i>
                                            <strong><%= employee.fullName || 'N/A' %></strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info"><%= employee.employeeId || employee.username %></span>
                                        </td>
                                        <td>
                                            <i class="bi bi-shop"></i>
                                            <span class="badge bg-primary"><%= employee.branch || 'Main Branch' %></span>
                                        </td>
                                        <td>
                                            <i class="bi bi-envelope"></i>
                                            <%= employee.email %>
                                        </td>
                                        <td>
                                            <i class="bi bi-telephone"></i>
                                            <%= employee.phone || 'N/A' %>
                                        </td>
                                        <td><%= new Date(employee.createdAt).toLocaleDateString() %></td>
                                        <td>
                                            <a href="/employees/edit/<%= employee._id %>" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <form action="/employees/delete/<%= employee._id %>" method="POST" class="d-inline"
                                                  onsubmit="return confirm('Delete this employee? They will no longer be able to login.')">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

</div>
<!-- End Main Content Wrapper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

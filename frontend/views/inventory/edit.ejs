<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4><i class="bi bi-pencil"></i> Edit Product</h4>
                    </div>
                    <div class="card-body">
                        <form action="/inventory/edit/<%= product._id %>" method="POST">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Product Name *</label>
                                    <input type="text" class="form-control" name="name" value="<%= product.name %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Category *</label>
                                    <select class="form-select" name="category" required>
                                        <option value="Bread" <%= product.category === 'Bread' ? 'selected' : '' %>>Bread</option>
                                        <option value="Cake" <%= product.category === 'Cake' ? 'selected' : '' %>>Cake</option>
                                        <option value="Pastry" <%= product.category === 'Pastry' ? 'selected' : '' %>>Pastry</option>
                                        <option value="Cookie" <%= product.category === 'Cookie' ? 'selected' : '' %>>Cookie</option>
                                        <option value="Other" <%= product.category === 'Other' ? 'selected' : '' %>>Other</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Purchase Price (â‚¹)</label>
                                    <input type="number" class="form-control" name="purchasePrice" id="purchasePrice" step="0.01" min="0" value="<%= product.purchasePrice || product.price %>">
                                    <small class="text-muted">Cost per unit (optional)</small>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Selling Price (â‚¹) *</label>
                                    <input type="number" class="form-control" name="sellingPrice" id="sellingPrice" step="0.01" min="0.01" value="<%= product.sellingPrice || product.price %>" required>
                                    <small class="text-muted">Retail price</small>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Profit Per Item</label>
                                    <div class="input-group">
                                        <span class="input-group-text">â‚¹</span>
                                        <input type="text" class="form-control" id="profitDisplay" readonly>
                                    </div>
                                    <small id="profitPercentage" class="text-success"></small>
                                </div>
                            </div>

                            <!-- ðŸŽ‚ CAKE-SPECIFIC PRICING -->
                            <% if (product.category && product.category.toLowerCase().includes('cake')) { %>
                            <div class="row" style="border-top: 2px solid #ec4899; padding-top: 15px; margin-top: 10px;">
                                <div class="col-12 mb-2">
                                    <h6 class="text-primary"><i class="bi bi-cake2"></i> Cake Weight-Based Pricing</h6>
                                    <small class="text-muted">Different prices for different weights</small>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Half Kg Price (â‚¹)</label>
                                    <input type="number" class="form-control" name="halfKgPrice" step="0.01" min="0" value="<%= product.halfKgPrice || 0 %>">
                                    <small class="text-muted">Price for 0.5 kg cake</small>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">One Kg Price (â‚¹)</label>
                                    <input type="number" class="form-control" name="oneKgPrice" step="0.01" min="0" value="<%= product.oneKgPrice || 0 %>">
                                    <small class="text-muted">Price for 1 kg cake</small>
                                </div>
                            </div>
                            <% } %>

                            <!-- Hidden field for backward compatibility -->
                            <input type="hidden" name="price" id="price" value="<%= product.price %>">

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Stock Quantity *</label>
                                    <input type="number" class="form-control" name="stock" id="editStock" min="0" value="<%= product.stock %>" required>
                                    <% if (product.trackStock === false) { %>
                                        <small class="text-info"><i class="bi bi-info-circle"></i> Stock tracking disabled for this product</small>
                                    <% } %>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Unit *</label>
                                    <select class="form-select" name="unit" id="unitSelect" required>
                                        <option value="piece" <%= product.unit === 'piece' ? 'selected' : '' %>>Piece</option>
                                        <option value="kg" <%= product.unit === 'kg' ? 'selected' : '' %>>Kilogram (kg)</option>
                                        <option value="gms" <%= product.unit === 'gms' ? 'selected' : '' %>>Grams (gms)</option>
                                        <option value="dozen" <%= product.unit === 'dozen' ? 'selected' : '' %>>Dozen</option>
                                        <option value="box" <%= product.unit === 'box' ? 'selected' : '' %>>Box</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3" id="gramAmountContainer" style="display: <%= product.unit === 'gms' ? 'block' : 'none' %>;">
                                    <label class="form-label">Gram Amount *</label>
                                    <input type="number" class="form-control" name="gramAmount" id="gramAmount" min="1" step="1" value="<%= product.gramAmount || 0 %>" placeholder="e.g., 250">
                                    <small class="text-muted">Amount in grams</small>
                                </div>
                                <div class="col-md-6 mb-3" id="reorderLevelContainer" style="display: <%= product.unit === 'gms' ? 'none' : 'block' %>;">
                                    <label class="form-label">Reorder Level *</label>
                                    <input type="number" class="form-control" name="reorderLevel" min="0" value="<%= product.reorderLevel %>" required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" name="description" rows="3"><%= product.description %></textarea>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/inventory" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Update Product
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- End Main Content Wrapper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Get input elements
        const purchasePriceInput = document.getElementById('purchasePrice');
        const sellingPriceInput = document.getElementById('sellingPrice');
        const priceInput = document.getElementById('price');
        const profitDisplay = document.getElementById('profitDisplay');
        const profitPercentage = document.getElementById('profitPercentage');
        const stockInput = document.getElementById('editStock');
        
        // Calculate profit whenever purchase or selling price changes
        function calculateProfit() {
            const purchase = parseFloat(purchasePriceInput.value) || 0;
            const selling = parseFloat(sellingPriceInput.value) || 0;
            
            const profit = selling - purchase;
            const profitPercent = purchase > 0 ? ((profit / purchase) * 100) : 0;
            
            profitDisplay.value = profit.toFixed(2);
            
            if (profit > 0) {
                profitPercentage.textContent = `+${profitPercent.toFixed(1)}% profit`;
                profitPercentage.className = 'text-success';
            } else if (profit < 0) {
                profitPercentage.textContent = `${profitPercent.toFixed(1)}% loss`;
                profitPercentage.className = 'text-danger';
            } else {
                profitPercentage.textContent = 'No profit/loss';
                profitPercentage.className = 'text-muted';
            }
            
            // Update hidden price field with selling price
            priceInput.value = selling;
        }
        
        // Prevent negative values
        purchasePriceInput.addEventListener('input', function() {
            if (this.value < 0) this.value = 0;
            calculateProfit();
        });
        
        sellingPriceInput.addEventListener('input', function() {
            if (this.value < 0) this.value = 0;
            calculateProfit();
        });
        
        stockInput.addEventListener('input', function() {
            if (this.value < 0) this.value = 0;
        });
        
        // Unit change handler for GMS
        const unitSelect = document.getElementById('unitSelect');
        const gramAmountContainer = document.getElementById('gramAmountContainer');
        const gramAmountInput = document.getElementById('gramAmount');
        const reorderLevelContainer = document.getElementById('reorderLevelContainer');
        
        if (unitSelect && gramAmountContainer) {
            unitSelect.addEventListener('change', function() {
                if (this.value === 'gms') {
                    gramAmountContainer.style.display = 'block';
                    reorderLevelContainer.style.display = 'none';
                    if (gramAmountInput) gramAmountInput.setAttribute('required', 'required');
                } else {
                    gramAmountContainer.style.display = 'none';
                    reorderLevelContainer.style.display = 'block';
                    if (gramAmountInput) {
                        gramAmountInput.removeAttribute('required');
                    }
                }
            });
        }
        
        // Calculate profit on page load
        calculateProfit();
    </script>
</body>
</html>

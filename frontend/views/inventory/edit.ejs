<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4><i class="bi bi-pencil"></i> Edit Product</h4>
                    </div>
                    <div class="card-body">
                        <form action="/inventory/edit/<%= product._id %>" method="POST">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Product Name *</label>
                                    <input type="text" class="form-control" name="name" value="<%= product.name %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Category *</label>
                                    <input type="text" class="form-control" name="category" list="categoryList" value="<%= product.category %>" required>
                                    <datalist id="categoryList">
                                        <option value="Bread">
                                        <option value="Cake">
                                        <option value="Pastry">
                                        <option value="Cookie">
                                        <option value="Other">
                                    </datalist>
                                    <small class="text-muted">Type or select from suggestions</small>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Purchase Price (â‚¹)</label>
                                    <input type="number" class="form-control" name="purchasePrice" id="purchasePrice" step="0.01" min="0" value="<%= product.purchasePrice || product.price %>">
                                    <small class="text-muted">Cost per unit (optional)</small>
                                </div>
                                <div class="col-md-4 mb-3" id="sellingPriceContainer" style="<% if (product.category && product.category.toLowerCase().includes('cake')) { %>display: none;<% } %>">
                                    <label class="form-label">Selling Price (â‚¹) *</label>
                                    <input type="number" class="form-control" name="sellingPrice" id="sellingPrice" step="0.01" min="0" value="<%= product.category && product.category.toLowerCase().includes('cake') ? '0' : (product.sellingPrice || product.price) %>"<% if (!product.category || !product.category.toLowerCase().includes('cake')) { %> required<% } %>>
                                    <small class="text-muted">Retail price</small>
                                </div>
                                <div class="col-md-4 mb-3" id="profitContainer" style="<% if (product.category && product.category.toLowerCase().includes('cake')) { %>display: none;<% } %>">
                                    <label class="form-label">Profit Per Item</label>
                                    <div class="input-group">
                                        <span class="input-group-text">â‚¹</span>
                                        <input type="text" class="form-control" id="profitDisplay" readonly>
                                    </div>
                                    <small id="profitPercentage" class="text-success"></small>
                                </div>
                            </div>

                            <!-- ðŸŽ‚ CAKE-SPECIFIC PRICING -->
                            <div id="cakePricingSection" class="row" style="border-top: 2px solid #ec4899; padding-top: 15px; margin-top: 10px;<% if (!product.category || !product.category.toLowerCase().includes('cake')) { %> display: none;<% } %>">
                                <div class="col-12 mb-2">
                                    <h6 class="text-primary"><i class="bi bi-cake2"></i> Cake Weight-Based Pricing</h6>
                                    <small class="text-muted">Different prices for different weights</small>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Half Kg Price (â‚¹)</label>
                                    <input type="number" class="form-control" name="halfKgPrice" step="0.01" min="0" value="<%= product.halfKgPrice || 0 %>">
                                    <small class="text-muted">Price for 0.5 kg cake</small>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">One Kg Price (â‚¹)</label>
                                    <input type="number" class="form-control" name="oneKgPrice" step="0.01" min="0" value="<%= product.oneKgPrice || 0 %>">
                                    <small class="text-muted">Price for 1 kg cake</small>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">PASTRY (100gms) Price (â‚¹)</label>
                                    <input type="number" class="form-control" name="pastryPrice" step="0.01" min="0" value="<%= product.pastryPrice || 0 %>">
                                    <small class="text-muted">Optional - Price for 100g pastry piece</small>
                                </div>
                            </div>

                            <!-- Hidden field for backward compatibility -->
                            <input type="hidden" name="price" id="price" value="<%= product.price %>">

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Stock Quantity *</label>
                                    <input type="number" class="form-control" name="stock" id="editStock" min="0" value="<%= product.stock %>" required>
                                    <% if (product.trackStock === false) { %>
                                        <small class="text-info"><i class="bi bi-info-circle"></i> Stock tracking disabled for this product</small>
                                    <% } %>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Unit *</label>
                                    <select class="form-select" name="unit" id="unitSelect" required>
                                        <option value="piece" <%= product.unit === 'piece' ? 'selected' : '' %>>Piece</option>
                                        <option value="kg" <%= product.unit === 'kg' ? 'selected' : '' %>>Kilogram (kg)</option>
                                        <option value="gms" <%= product.unit === 'gms' ? 'selected' : '' %>>Grams (gms)</option>
                                        <option value="dozen" <%= product.unit === 'dozen' ? 'selected' : '' %>>Dozen</option>
                                        <option value="box" <%= product.unit === 'box' ? 'selected' : '' %>>Box</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3" id="gramAmountContainer" style="display: <%= product.unit === 'gms' ? 'block' : 'none' %>;">
                                    <label class="form-label">Gram Amount<% if (product.unit === 'gms') { %> *<% } %></label>
                                    <input type="number" class="form-control" name="gramAmount" id="gramAmount" step="1" value="<%= product.gramAmount || 0 %>" placeholder="e.g., 250"<% if (product.unit === 'gms') { %> min="1" required<% } %>>
                                    <small class="text-muted">Amount in grams</small>
                                </div>
                                <div class="col-md-6 mb-3" id="reorderLevelContainer" style="display: <%= product.unit === 'gms' ? 'none' : 'block' %>;">
                                    <label class="form-label">Reorder Level<% if (!product.category || !product.category.toLowerCase().includes('cake')) { %> *<% } %></label>
                                    <input type="number" class="form-control" id="reorderLevel" name="reorderLevel" min="0" value="<%= product.reorderLevel %>"<% if (!product.category || !product.category.toLowerCase().includes('cake')) { %> required<% } %>>
                                    <small class="text-muted"><% if (product.category && product.category.toLowerCase().includes('cake')) { %>Optional for cakes<% } else { %>Minimum stock alert level<% } %></small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" name="description" rows="3"><%= product.description %></textarea>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/inventory" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary" id="updateBtn">
                                    <i class="bi bi-check-circle"></i> Update Product
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- End Main Content Wrapper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Get input elements
        const purchasePriceInput = document.getElementById('purchasePrice');
        const sellingPriceInput = document.getElementById('sellingPrice');
        const priceInput = document.getElementById('price');
        const profitDisplay = document.getElementById('profitDisplay');
        const profitPercentage = document.getElementById('profitPercentage');
        const stockInput = document.getElementById('editStock');
        
        // Calculate profit whenever purchase or selling price changes
        function calculateProfit() {
            const purchase = parseFloat(purchasePriceInput.value) || 0;
            const selling = parseFloat(sellingPriceInput.value) || 0;
            
            const profit = selling - purchase;
            const profitPercent = purchase > 0 ? ((profit / purchase) * 100) : 0;
            
            profitDisplay.value = profit.toFixed(2);
            
            if (profit > 0) {
                profitPercentage.textContent = `+${profitPercent.toFixed(1)}% profit`;
                profitPercentage.className = 'text-success';
            } else if (profit < 0) {
                profitPercentage.textContent = `${profitPercent.toFixed(1)}% loss`;
                profitPercentage.className = 'text-danger';
            } else {
                profitPercentage.textContent = 'No profit/loss';
                profitPercentage.className = 'text-muted';
            }
            
            // Update hidden price field with selling price
            priceInput.value = selling;
        }
        
        // Prevent negative values
        purchasePriceInput.addEventListener('input', function() {
            if (this.value < 0) this.value = 0;
            calculateProfit();
        });
        
        sellingPriceInput.addEventListener('input', function() {
            if (this.value < 0) this.value = 0;
            calculateProfit();
        });
        
        stockInput.addEventListener('input', function() {
            if (this.value < 0) this.value = 0;
        });
        
        // Unit change handler for GMS
        const unitSelect = document.getElementById('unitSelect');
        const gramAmountContainer = document.getElementById('gramAmountContainer');
        const gramAmountInput = document.getElementById('gramAmount');
        const gramAmountLabel = gramAmountContainer ? gramAmountContainer.querySelector('label') : null;
        const reorderLevelContainer = document.getElementById('reorderLevelContainer');
        const reorderLevelInput = document.getElementById('reorderLevel');
        
        if (unitSelect && gramAmountContainer) {
            unitSelect.addEventListener('change', function() {
                const categoryInput = document.querySelector('input[name="category"]');
                const category = categoryInput ? categoryInput.value.trim().toLowerCase() : '';
                const isCake = category === 'cake' || category.includes('cake');
                
                if (this.value === 'gms') {
                    gramAmountContainer.style.display = 'block';
                    reorderLevelContainer.style.display = 'none';
                    if (gramAmountInput) {
                        gramAmountInput.setAttribute('required', 'required');
                        gramAmountInput.setAttribute('min', '1');
                    }
                    if (gramAmountLabel) {
                        gramAmountLabel.innerHTML = 'Gram Amount *';
                    }
                    // Remove required from reorderLevel when hidden
                    if (reorderLevelInput) {
                        reorderLevelInput.removeAttribute('required');
                    }
                } else {
                    gramAmountContainer.style.display = 'none';
                    reorderLevelContainer.style.display = 'block';
                    if (gramAmountInput) {
                        gramAmountInput.removeAttribute('required');
                        gramAmountInput.removeAttribute('min');
                    }
                    if (gramAmountLabel) {
                        gramAmountLabel.innerHTML = 'Gram Amount';
                    }
                    // Add required to reorderLevel when visible (unless it's a cake)
                    if (reorderLevelInput && !isCake) {
                        reorderLevelInput.setAttribute('required', 'required');
                    }
                }
            });
        }
        
        // Calculate profit on page load
        calculateProfit();
        
        // Category change handler for showing/hiding cake pricing section
        const categoryInput = document.querySelector('input[name="category"]');
        const cakePricingSection = document.getElementById('cakePricingSection');
        const sellingPriceContainer = document.getElementById('sellingPriceContainer');
        const profitContainer = document.getElementById('profitContainer');
        const sellingPriceInput = document.getElementById('sellingPrice');
        const reorderLevelContainer = document.getElementById('reorderLevelContainer');
        const reorderLevelInput = document.getElementById('reorderLevel');
        const reorderLevelLabel = reorderLevelContainer ? reorderLevelContainer.querySelector('label') : null;
        const reorderLevelHint = reorderLevelContainer ? reorderLevelContainer.querySelector('small') : null;
        
        if (categoryInput && cakePricingSection) {
            categoryInput.addEventListener('input', function() {
                const category = this.value.trim().toLowerCase();
                
                if (category === 'cake' || category.includes('cake')) {
                    // Show cake pricing section
                    cakePricingSection.style.display = 'block';
                    
                    // Hide selling price and profit for cake category
                    if (sellingPriceContainer) {
                        sellingPriceContainer.style.display = 'none';
                        if (sellingPriceInput) {
                            sellingPriceInput.removeAttribute('required');
                            sellingPriceInput.setAttribute('min', '0');
                            sellingPriceInput.value = '0';
                        }
                    }
                    if (profitContainer) {
                        profitContainer.style.display = 'none';
                    }
                    
                    // Make reorder level optional for cakes
                    if (reorderLevelInput) {
                        reorderLevelInput.removeAttribute('required');
                    }
                    if (reorderLevelLabel) {
                        reorderLevelLabel.innerHTML = 'Reorder Level';
                    }
                    if (reorderLevelHint) {
                        reorderLevelHint.innerHTML = 'Optional for cakes';
                    }
                } else {
                    // Hide cake pricing section
                    cakePricingSection.style.display = 'none';
                    
                    // Show selling price and profit for non-cake
                    if (sellingPriceContainer) {
                        sellingPriceContainer.style.display = 'block';
                        if (sellingPriceInput) {
                            sellingPriceInput.setAttribute('required', 'required');
                            sellingPriceInput.setAttribute('min', '0.01');
                        }
                    }
                    if (profitContainer) {
                        profitContainer.style.display = 'block';
                    }
                    
                    // Make reorder level required for non-cakes (if not gms unit)
                    if (reorderLevelContainer && reorderLevelContainer.style.display !== 'none') {
                        if (reorderLevelInput) {
                            reorderLevelInput.setAttribute('required', 'required');
                        }
                        if (reorderLevelLabel) {
                            reorderLevelLabel.innerHTML = 'Reorder Level *';
                        }
                        if (reorderLevelHint) {
                            reorderLevelHint.innerHTML = 'Minimum stock alert level';
                        }
                    }
                }
            });
        }
        
        // Form submission handler - ensure hidden fields don't block submission
        const editForm = document.querySelector('form[action^="/inventory/edit/"]');
        if (editForm) {
            editForm.addEventListener('submit', function(e) {
                // Get references to elements
                const gramAmountInput = document.getElementById('gramAmount');
                const gramAmountContainer = document.getElementById('gramAmountContainer');
                
                // Remove required from hidden fields to prevent validation errors
                const allInputs = editForm.querySelectorAll('input[required]');
                allInputs.forEach(input => {
                    const parent = input.closest('[style*="display: none"], [style*="display:none"]');
                    if (parent || (input.offsetParent === null && input.type !== 'hidden')) {
                        input.removeAttribute('required');
                    }
                });
                
                // For cake products, ensure sellingPrice is set to 0 if hidden
                const category = categoryInput ? categoryInput.value.trim().toLowerCase() : '';
                
                if (category === 'cake' || category.includes('cake')) {
                    if (sellingPriceInput && sellingPriceContainer.style.display === 'none') {
                        sellingPriceInput.value = '0';
                        sellingPriceInput.removeAttribute('required');
                        sellingPriceInput.removeAttribute('min');
                    }
                    
                    // Make reorder level optional for cakes
                    if (reorderLevelInput) {
                        reorderLevelInput.removeAttribute('required');
                    }
                }
                
                // Ensure gramAmount doesn't block submission if hidden
                if (gramAmountInput && gramAmountContainer && gramAmountContainer.style.display === 'none') {
                    gramAmountInput.removeAttribute('required');
                    gramAmountInput.removeAttribute('min');
                }
                
                // Allow form to submit
                return true;
            });
        }

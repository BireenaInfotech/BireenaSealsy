<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Fix scrolling issue */
        html, body {
            height: 100%;
            overflow-x: hidden;
            overflow-y: auto;
        }
        
        body {
            padding-bottom: 50px;
        }
        
        .container {
            max-width: 100%;
            overflow-x: hidden;
        }
        
        /* Ensure form inputs don't cause horizontal overflow */
        input, select, textarea {
            max-width: 100%;
        }
        
        /* Image preview container */
        #imagePreviewContainer img {
            max-width: 100%;
            height: auto;
        }
        
        /* Made to Order Toggle Enhancement */
        .made-to-order-toggle {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 20px;
            margin: 15px 0;
            border: 2px solid #5a67d8;
            box-shadow: 0 4px 6px rgba(102, 126, 234, 0.2);
            transition: all 0.3s ease;
        }
        
        .made-to-order-toggle:hover {
            box-shadow: 0 6px 12px rgba(102, 126, 234, 0.3);
            transform: translateY(-2px);
        }
        
        .made-to-order-toggle .form-check-input {
            width: 60px;
            height: 30px;
            cursor: pointer;
            border: 2px solid #fff;
            background-color: rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
        }
        
        .made-to-order-toggle .form-check-input:checked {
            background-color: #10b981;
            border-color: #10b981;
        }
        
        .made-to-order-toggle .form-check-input:focus {
            box-shadow: 0 0 0 0.25rem rgba(255, 255, 255, 0.5);
        }
        
        .made-to-order-toggle .form-check-input:not(:checked) {
            background-color: rgba(239, 68, 68, 0.5);
            border-color: rgba(239, 68, 68, 0.8);
        }
        
        .made-to-order-toggle label {
            color: white;
            cursor: pointer;
            user-select: none;
        }
        
        .made-to-order-toggle .toggle-title {
            font-size: 18px;
            font-weight: 700;
            color: white;
            margin-bottom: 5px;
        }
        
        .made-to-order-toggle .toggle-subtitle {
            font-size: 13px;
            color: rgba(255, 255, 255, 0.9);
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4><i class="bi bi-pencil"></i> Edit Product</h4>
                    </div>
                    <div class="card-body">
                        <form action="/inventory/edit/<%= product._id %>" method="POST">
                            <!-- Hidden fields -->
                            <input type="hidden" name="price" id="price" value="<%= product.price %>">
                            <input type="hidden" name="trackStock" id="trackStock" value="<%= product.trackStock === false ? 'false' : 'true' %>">

                            <!-- Basic Information -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Product Name *</label>
                                    <input type="text" class="form-control" name="name" value="<%= product.name %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Category *</label>
                                    <input type="text" class="form-control" name="category" list="categoryList" value="<%= product.category %>" required>
                                    <datalist id="categoryList">
                                        <option value="Bread">
                                        <option value="Cake">
                                        <option value="Pastry">
                                        <option value="Cookie">
                                        <option value="Other">
                                    </datalist>
                                    <small class="text-muted">Type or select from suggestions</small>
                                </div>
                            </div>

                            <!-- Pricing -->
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Purchase Price (â‚¹)</label>
                                    <input type="number" class="form-control" name="purchasePrice" id="purchasePrice" step="0.01" min="0" value="<%= product.purchasePrice || product.price %>">
                                    <small class="text-muted">Cost per unit (optional)</small>
                                </div>
                                <div class="col-md-4 mb-3" id="sellingPriceContainer">
                                    <label class="form-label">Selling Price (â‚¹) *</label>
                                    <input type="number" class="form-control" name="sellingPrice" id="sellingPrice" step="0.01" min="0" value="<%= product.category && product.category.toLowerCase().includes('cake') ? '0' : (product.sellingPrice || product.price) %>"<% if (!product.category || !product.category.toLowerCase().includes('cake')) { %> required<% } %>>
                                    <small class="text-muted">Retail price</small>
                                </div>
                                <div class="col-md-4 mb-3" id="profitContainer">
                                    <label class="form-label">Profit Per Item</label>
                                    <div class="input-group">
                                        <span class="input-group-text">â‚¹</span>
                                        <input type="text" class="form-control" id="profitDisplay" readonly>
                                    </div>
                                    <small id="profitPercentage" class="text-success"></small>
                                </div>
                            </div>

                            <!-- ðŸŽ‚ CAKE-SPECIFIC PRICING -->
                            <div id="cakePricingSection" style="border-top: 2px solid #ec4899; padding-top: 15px; margin-top: 10px; margin-bottom: 20px;">
                                <div class="mb-2">
                                    <h6 class="text-primary"><i class="bi bi-cake2"></i> Cake Weight-Based Pricing</h6>
                                    <small class="text-muted">Different prices for different weights</small>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Half Kg Price (â‚¹)</label>
                                        <input type="number" class="form-control" name="halfKgPrice" step="0.01" min="0" value="<%= product.halfKgPrice || 0 %>">
                                        <small class="text-muted">Price for 0.5 kg cake</small>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">One Kg Price (â‚¹)</label>
                                        <input type="number" class="form-control" name="oneKgPrice" step="0.01" min="0" value="<%= product.oneKgPrice || 0 %>">
                                        <small class="text-muted">Price for 1 kg cake</small>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">PASTRY (100gms) Price (â‚¹)</label>
                                        <input type="number" class="form-control" name="pastryPrice" step="0.01" min="0" value="<%= product.pastryPrice || 0 %>">
                                        <small class="text-muted">Optional - Price for pastry piece</small>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">PASTRY Grams</label>
                                        <input type="number" class="form-control" name="pastryGrams" step="1" min="0" value="<%= product.pastryGrams || 100 %>">
                                        <small class="text-muted">Weight in grams (default: 100g)</small>
                                    </div>
                                </div>
                            </div>

                            <!-- ðŸ“Š STOCK MANAGEMENT -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0"><i class="bi bi-box-seam"></i> Stock Management</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Stock Quantity</label>
                                            <input type="number" class="form-control" name="stock" id="editStock" min="0" value="<%= product.stock %>" <% if (product.trackStock === false) { %>readonly disabled style="background-color: #f8f9fa;"<% } %>>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Unit *</label>
                                            <select class="form-select" name="unit" id="unitSelect" required>
                                                <option value="piece" <%= product.unit === 'piece' ? 'selected' : '' %>>Piece</option>
                                                <option value="kg" <%= product.unit === 'kg' ? 'selected' : '' %>>Kilogram (kg)</option>
                                                <option value="gms" <%= product.unit === 'gms' ? 'selected' : '' %>>Grams (gms)</option>
                                                <option value="dozen" <%= product.unit === 'dozen' ? 'selected' : '' %>>Dozen</option>
                                                <option value="box" <%= product.unit === 'box' ? 'selected' : '' %>>Box</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Made to Order Toggle -->
                                    <div class="made-to-order-toggle">
                                        <div class="form-check form-switch d-flex align-items-center">
                                            <input class="form-check-input me-3" type="checkbox" id="disableStockToggle" <% if (product.trackStock === false) { %>checked<% } %>>
                                            <label class="form-check-label flex-grow-1" for="disableStockToggle">
                                                <div class="toggle-title">
                                                    <i class="bi bi-infinity"></i> Made to Order
                                                </div>
                                                <div class="toggle-subtitle">
                                                    Disable stock tracking for unlimited sales
                                                </div>
                                            </label>
                                        </div>
                                    </div>

                                    <small class="text-info d-block mt-2" id="stockStatusNote">
                                        <i class="bi bi-info-circle"></i> Stock tracking disabled - can sell unlimited quantity
                                    </small>

                                    <div class="row mt-3">
                                        <div class="col-md-6 mb-3" id="gramAmountContainer">
                                            <label class="form-label">Gram Amount<% if (product.unit === 'gms') { %> *<% } %></label>
                                            <input type="number" class="form-control" name="gramAmount" id="gramAmount" step="1" value="<%= product.gramAmount || 0 %>" placeholder="e.g., 250"<% if (product.unit === 'gms') { %> min="1" required<% } %>>
                                            <small class="text-muted">Amount in grams</small>
                                        </div>
                                        <div class="col-md-6 mb-3" id="reorderLevelContainer">
                                            <label class="form-label" id="reorderLevelLabel">Reorder Level<% if (product.trackStock !== false && product.unit !== 'gms') { %> *<% } %></label>
                                            <input type="number" class="form-control" id="reorderLevel" name="reorderLevel" min="0" value="<%= product.reorderLevel %>"<% if (product.trackStock !== false && product.unit !== 'gms') { %> required<% } %>>
                                            <small class="text-muted" id="reorderLevelHint"><% if (product.trackStock === false) { %>Optional (stock tracking disabled)<% } else { %>Minimum stock alert level<% } %></small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- ðŸ“ ADDITIONAL INFORMATION -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0"><i class="bi bi-file-text"></i> Additional Information</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">Description</label>
                                        <textarea class="form-control" name="description" rows="3" placeholder="Enter product description..."><%= product.description %></textarea>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Product Image URL</label>
                                        <input type="url" class="form-control" name="image" id="imageUrl" value="<%= product.image || '' %>" placeholder="https://example.com/image.jpg">
                                        <small class="text-muted">Enter a valid image URL</small>
                                    </div>

                                    <!-- Image Preview -->
                                    <div class="mb-3" id="imagePreviewContainer">
                                        <label class="form-label">Image Preview</label>
                                        <div class="border rounded p-2 text-center bg-light">
                                            <img id="imagePreview" src="<%= product.image || '' %>" alt="Product Preview" style="max-width: 200px; max-height: 200px; object-fit: contain;">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Buttons -->
                            <div class="d-grid gap-2 mt-3">
                                <button type="submit" class="btn btn-primary btn-lg" id="updateBtn">
                                    <i class="bi bi-check-circle"></i> Update Product
                                </button>
                                <a href="/inventory" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Inventory
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Set initial display states on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Hide/show based on category (cake)
            const isCakeCategory = <%= product.category && product.category.toLowerCase().includes('cake') ? 'true' : 'false' %>;
            if (isCakeCategory) {
                document.getElementById('sellingPriceContainer').style.display = 'none';
                document.getElementById('profitContainer').style.display = 'none';
                document.getElementById('cakePricingSection').style.display = 'block';
            } else {
                document.getElementById('sellingPriceContainer').style.display = 'block';
                document.getElementById('profitContainer').style.display = 'block';
                document.getElementById('cakePricingSection').style.display = 'none';
            }
            
            // Hide/show based on unit (gms)
            const isGmsUnit = '<%= product.unit %>' === 'gms';
            if (isGmsUnit) {
                document.getElementById('gramAmountContainer').style.display = 'block';
                document.getElementById('reorderLevelContainer').style.display = 'none';
            } else {
                document.getElementById('gramAmountContainer').style.display = 'none';
                document.getElementById('reorderLevelContainer').style.display = 'block';
            }
            
            // Hide/show stock status note based on trackStock
            const isStockDisabled = <%= product.trackStock === false ? 'true' : 'false' %>;
            if (isStockDisabled) {
                document.getElementById('stockStatusNote').style.display = 'block';
            } else {
                document.getElementById('stockStatusNote').style.display = 'none';
            }
            
            // Hide/show image preview based on whether image exists
            const hasImage = '<%= product.image || "" %>' !== '';
            if (hasImage) {
                document.getElementById('imagePreviewContainer').style.display = 'block';
            } else {
                document.getElementById('imagePreviewContainer').style.display = 'none';
            }
        });
        
        // Get input elements
        const purchasePriceInput = document.getElementById('purchasePrice');
        const sellingPriceInput = document.getElementById('sellingPrice');
        const priceInput = document.getElementById('price');
        const profitDisplay = document.getElementById('profitDisplay');
        const profitPercentage = document.getElementById('profitPercentage');
        const stockInput = document.getElementById('editStock');
        
        // Calculate profit whenever purchase or selling price changes
        function calculateProfit() {
            const purchase = parseFloat(purchasePriceInput.value) || 0;
            const selling = parseFloat(sellingPriceInput.value) || 0;
            
            const profit = selling - purchase;
            const profitPercent = purchase > 0 ? ((profit / purchase) * 100) : 0;
            
            profitDisplay.value = profit.toFixed(2);
            
            if (profit > 0) {
                profitPercentage.textContent = `+${profitPercent.toFixed(1)}% profit`;
                profitPercentage.className = 'text-success';
            } else if (profit < 0) {
                profitPercentage.textContent = `${profitPercent.toFixed(1)}% loss`;
                profitPercentage.className = 'text-danger';
            } else {
                profitPercentage.textContent = 'No profit/loss';
                profitPercentage.className = 'text-muted';
            }
            
            // Update hidden price field with selling price
            priceInput.value = selling;
        }
        
        // Prevent negative values
        purchasePriceInput.addEventListener('input', function() {
            if (this.value < 0) this.value = 0;
            calculateProfit();
        });
        
        sellingPriceInput.addEventListener('input', function() {
            if (this.value < 0) this.value = 0;
            calculateProfit();
        });
        
        stockInput.addEventListener('input', function() {
            if (this.value < 0) this.value = 0;
        });
        
        // Stock tracking toggle handler
        const disableStockToggle = document.getElementById('disableStockToggle');
        const trackStockInput = document.getElementById('trackStock');
        const stockStatusNote = document.getElementById('stockStatusNote');
        
        // Function to update reorder level requirement based on stock tracking and unit
        function updateReorderLevelRequirement() {
            const unitSelect = document.getElementById('unitSelect');
            const reorderLevelInput = document.getElementById('reorderLevel');
            const reorderLevelLabel = document.getElementById('reorderLevelLabel');
            const reorderLevelHint = document.getElementById('reorderLevelHint');
            
            if (!reorderLevelInput || !unitSelect) return;
            
            const stockDisabled = disableStockToggle && disableStockToggle.checked;
            const isGmsUnit = unitSelect.value === 'gms';
            
            if (stockDisabled || isGmsUnit) {
                // Stock disabled or gms unit - reorder level optional
                reorderLevelInput.removeAttribute('required');
                if (reorderLevelLabel) {
                    reorderLevelLabel.innerHTML = 'Reorder Level';
                }
                if (reorderLevelHint) {
                    reorderLevelHint.textContent = stockDisabled ? 'Optional (stock tracking disabled)' : 'Not applicable for grams unit';
                }
            } else {
                // Stock enabled and not gms - reorder level required
                reorderLevelInput.setAttribute('required', 'required');
                if (reorderLevelLabel) {
                    reorderLevelLabel.innerHTML = 'Reorder Level *';
                }
                if (reorderLevelHint) {
                    reorderLevelHint.textContent = 'Minimum stock alert level';
                }
            }
        }
        
        if (disableStockToggle && stockInput && trackStockInput) {
            disableStockToggle.addEventListener('change', function() {
                if (this.checked) {
                    // Disable stock tracking
                    stockInput.value = '0';
                    stockInput.setAttribute('readonly', true);
                    stockInput.setAttribute('disabled', true);
                    stockInput.style.backgroundColor = '#f8f9fa';
                    trackStockInput.value = 'false';
                    if (stockStatusNote) stockStatusNote.style.display = 'block';
                } else {
                    // Enable stock tracking
                    stockInput.removeAttribute('readonly');
                    stockInput.removeAttribute('disabled');
                    stockInput.style.backgroundColor = '';
                    trackStockInput.value = 'true';
                    if (stockStatusNote) stockStatusNote.style.display = 'none';
                }
                // Update reorder level requirement
                updateReorderLevelRequirement();
            });
        }
        
        // Unit change handler for GMS
        const unitSelect = document.getElementById('unitSelect');
        const gramAmountContainer = document.getElementById('gramAmountContainer');
        const gramAmountInput = document.getElementById('gramAmount');
        const gramAmountLabel = gramAmountContainer ? gramAmountContainer.querySelector('label') : null;
        const reorderLevelContainer = document.getElementById('reorderLevelContainer');
        const reorderLevelInput = document.getElementById('reorderLevel');
        
        if (unitSelect && gramAmountContainer) {
            unitSelect.addEventListener('change', function() {
                const categoryInput = document.querySelector('input[name="category"]');
                const category = categoryInput ? categoryInput.value.trim().toLowerCase() : '';
                const isCake = category === 'cake' || category.includes('cake');
                
                if (this.value === 'gms') {
                    gramAmountContainer.style.display = 'block';
                    reorderLevelContainer.style.display = 'none';
                    if (gramAmountInput) {
                        gramAmountInput.setAttribute('required', 'required');
                        gramAmountInput.setAttribute('min', '1');
                    }
                    if (gramAmountLabel) {
                        gramAmountLabel.innerHTML = 'Gram Amount *';
                    }
                    // Remove required from reorderLevel when hidden
                    if (reorderLevelInput) {
                        reorderLevelInput.removeAttribute('required');
                    }
                } else {
                    gramAmountContainer.style.display = 'none';
                    reorderLevelContainer.style.display = 'block';
                    if (gramAmountInput) {
                        gramAmountInput.removeAttribute('required');
                        gramAmountInput.removeAttribute('min');
                    }
                    if (gramAmountLabel) {
                        gramAmountLabel.innerHTML = 'Gram Amount';
                    }
                }
                // Update reorder level requirement based on stock tracking status
                updateReorderLevelRequirement();
            });
        }
        
        // Calculate profit on page load
        calculateProfit();
        
        // Set initial reorder level requirement on page load
        updateReorderLevelRequirement();
        
        // Category change handler for showing/hiding cake pricing section
        const categoryInput = document.querySelector('input[name="category"]');
        const cakePricingSection = document.getElementById('cakePricingSection');
        const sellingPriceContainer = document.getElementById('sellingPriceContainer');
        const profitContainer = document.getElementById('profitContainer');
        
        if (categoryInput && cakePricingSection) {
            categoryInput.addEventListener('input', function() {
                const category = this.value.trim().toLowerCase();
                
                if (category === 'cake' || category.includes('cake')) {
                    // Show cake pricing section
                    cakePricingSection.style.display = 'block';
                    
                    // Hide selling price and profit for cake category
                    if (sellingPriceContainer) {
                        sellingPriceContainer.style.display = 'none';
                        if (sellingPriceInput) {
                            sellingPriceInput.removeAttribute('required');
                            sellingPriceInput.setAttribute('min', '0');
                            sellingPriceInput.value = '0';
                        }
                    }
                    if (profitContainer) {
                        profitContainer.style.display = 'none';
                    }
                    
                    // Auto-select kg unit for cakes
                    if (unitSelect) {
                        unitSelect.value = 'kg';
                        unitSelect.dispatchEvent(new Event('change'));
                    }
                } else {
                    // Hide cake pricing section
                    cakePricingSection.style.display = 'none';
                    
                    // Show selling price and profit for non-cake
                    if (sellingPriceContainer) {
                        sellingPriceContainer.style.display = 'block';
                        if (sellingPriceInput) {
                            sellingPriceInput.setAttribute('required', 'required');
                            sellingPriceInput.setAttribute('min', '0.01');
                        }
                    }
                    if (profitContainer) {
                        profitContainer.style.display = 'block';
                    }
                }
                // Update reorder level requirement
                updateReorderLevelRequirement();
            });
        }
        
        // Form submission handler - ensure hidden fields don't block submission
        const editForm = document.querySelector('form[action^="/inventory/edit/"]');
        if (editForm) {
            editForm.addEventListener('submit', function(e) {
                // Get references to elements
                const gramAmountInput = document.getElementById('gramAmount');
                const gramAmountContainer = document.getElementById('gramAmountContainer');
                
                // Remove required from hidden fields to prevent validation errors
                const allInputs = editForm.querySelectorAll('input[required]');
                allInputs.forEach(input => {
                    const parent = input.closest('[style*="display: none"], [style*="display:none"]');
                    if (parent || (input.offsetParent === null && input.type !== 'hidden')) {
                        input.removeAttribute('required');
                    }
                });
                
                // For cake products, ensure sellingPrice is set to 0 if hidden
                const category = categoryInput ? categoryInput.value.trim().toLowerCase() : '';
                
                if (category === 'cake' || category.includes('cake')) {
                    if (sellingPriceInput && sellingPriceContainer.style.display === 'none') {
                        sellingPriceInput.value = '0';
                        sellingPriceInput.removeAttribute('required');
                        sellingPriceInput.removeAttribute('min');
                    }
                    
                    // Make reorder level optional for cakes
                    if (reorderLevelInput) {
                        reorderLevelInput.removeAttribute('required');
                    }
                }
                
                // Ensure gramAmount doesn't block submission if hidden
                if (gramAmountInput && gramAmountContainer && gramAmountContainer.style.display === 'none') {
                    gramAmountInput.removeAttribute('required');
                    gramAmountInput.removeAttribute('min');
                }
                
                // Enable stock field temporarily for submission if disabled
                const stockInput = document.getElementById('editStock');
                if (stockInput && stockInput.hasAttribute('disabled')) {
                    stockInput.removeAttribute('disabled');
                }
                
                // Allow form to submit
                return true;
            });
        }
        // Image URL preview handler
        const imageUrlInput = document.getElementById('imageUrl');
        const imagePreview = document.getElementById('imagePreview');
        const imagePreviewContainer = document.getElementById('imagePreviewContainer');
        
        if (imageUrlInput && imagePreview && imagePreviewContainer) {
            imageUrlInput.addEventListener('input', function() {
                const url = this.value.trim();
                
                if (url) {
                    // Show preview container
                    imagePreviewContainer.style.display = 'block';
                    // Set image source
                    imagePreview.src = url;
                    
                    // Handle image load error
                    imagePreview.onerror = function() {
                        imagePreviewContainer.style.display = 'none';
                    };
                    
                    // Show container when image loads successfully
                    imagePreview.onload = function() {
                        imagePreviewContainer.style.display = 'block';
                    };
                } else {
                    // Hide preview if URL is empty
                    imagePreviewContainer.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>

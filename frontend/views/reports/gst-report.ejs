<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GST Report - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body data-requires-auth="true">
    <%- include('../partials/navbar') %>

    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="bi bi-file-earmark-text"></i> GST Report (GSTR-1 Format)</h2>
                    <a href="/reports" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Reports
                    </a>
                </div>

                <!-- Filter Section -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-funnel"></i> Filters
                    </div>
                    <div class="card-body">
                        <form method="GET" action="/gst-reports" class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Start Date</label>
                                <input type="date" name="startDate" class="form-control" value="<%= filters.startDate || '' %>">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">End Date</label>
                                <input type="date" name="endDate" class="form-control" value="<%= filters.endDate || '' %>">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Customer Type</label>
                                <select name="customerType" class="form-select">
                                    <option value="all" <%= filters.customerType === 'all' ? 'selected' : '' %>>All</option>
                                    <option value="B2B" <%= filters.customerType === 'B2B' ? 'selected' : '' %>>B2B Only</option>
                                    <option value="B2C" <%= filters.customerType === 'B2C' ? 'selected' : '' %>>B2C Only</option>
                                </select>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bi bi-search"></i> Filter
                                </button>
                                <a href="/gst-reports/export?startDate=<%= filters.startDate || '' %>&endDate=<%= filters.endDate || '' %>&customerType=<%= filters.customerType || 'all' %>" class="btn btn-success">
                                    <i class="bi bi-download"></i> Export CSV
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- GST Summary Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <h6 class="card-title">Total Sales</h6>
                                <h3 class="mb-0">₹<%= summary.totalSales %></h3>
                                <small><%= summary.totalSaleCount %> transactions</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <h6 class="card-title">B2B Sales</h6>
                                <h3 class="mb-0">₹<%= summary.totalB2BSales %></h3>
                                <small><%= summary.b2bCount %> transactions</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-secondary">
                            <div class="card-body">
                                <h6 class="card-title">B2C Sales</h6>
                                <h3 class="mb-0">₹<%= summary.totalB2CSales %></h3>
                                <small><%= summary.b2cCount %> transactions</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <h6 class="card-title">Total GST Collected</h6>
                                <h3 class="mb-0">₹<%= summary.totalGST %></h3>
                                <small>Tax Amount</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- GST Breakdown -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6>Taxable Amount</h6>
                                <h4 class="text-primary">₹<%= summary.totalTaxableAmount %></h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6>CGST + SGST</h6>
                                <h4 class="text-info">₹<%= (parseFloat(summary.totalCGST) + parseFloat(summary.totalSGST)).toFixed(2) %></h4>
                                <small>Intra-State: <%= summary.intraSaleCount %></small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6>IGST</h6>
                                <h4 class="text-warning">₹<%= summary.totalIGST %></h4>
                                <small>Inter-State: <%= summary.interSaleCount %></small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- B2B Sales Table -->
                <% if (b2bSales.length > 0) { %>
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-building"></i> B2B Sales (With GSTIN)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Bill No.</th>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>GSTIN</th>
                                        <th>Place of Supply</th>
                                        <th class="text-end">Taxable Amt</th>
                                        <th class="text-end">CGST</th>
                                        <th class="text-end">SGST</th>
                                        <th class="text-end">IGST</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% b2bSales.forEach(sale => { %>
                                    <tr>
                                        <td><a href="/bill/<%= sale._id %>" target="_blank"><%= sale.billNumber %></a></td>
                                        <td><%= new Date(sale.createdAt).toLocaleDateString('en-IN') %></td>
                                        <td><%= sale.customerName %></td>
                                        <td><small><%= sale.customerGSTIN || 'N/A' %></small></td>
                                        <td><small><%= sale.placeOfSupply || 'N/A' %></small></td>
                                        <td class="text-end">₹<%= (sale.totalTaxableAmount || 0).toFixed(2) %></td>
                                        <td class="text-end">₹<%= (sale.totalCGST || 0).toFixed(2) %></td>
                                        <td class="text-end">₹<%= (sale.totalSGST || 0).toFixed(2) %></td>
                                        <td class="text-end">₹<%= (sale.totalIGST || 0).toFixed(2) %></td>
                                        <td class="text-end"><strong>₹<%= sale.total.toFixed(2) %></strong></td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- B2C Sales Summary -->
                <% if (b2cSales.length > 0) { %>
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-person"></i> B2C Sales (Retail)</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <strong>Total B2C Transactions:</strong> <%= b2cSales.length %><br>
                            <strong>Total B2C Amount:</strong> ₹<%= summary.totalB2CSales %>
                        </div>
                        <p class="text-muted"><small>Note: B2C sales are consolidated and don't require individual GSTIN tracking.</small></p>
                    </div>
                </div>
                <% } %>

                <% if (sales.length === 0) { %>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> No sales found for the selected filters.
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/animations.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>

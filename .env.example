PORT=3000

# ==================== ENVIRONMENT ====================
# CRITICAL: Set to 'production' in production deployment
NODE_ENV=production

# MongoDB Atlas - Make sure to whitelist your IP at https://cloud.mongodb.com
# IMPORTANT: Use SSL connection string in production
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/bireena_bakery?retryWrites=true&w=majority&appName=Cluster0&ssl=true

# Local MongoDB (use this if MongoDB is installed locally)
# MONGODB_URI=mongodb://localhost:27017/bireena_bakery

# ==================== SECURITY SECRETS ====================
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# CRITICAL: Change these before deployment!
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# ==================== SECURITY SETTINGS ====================
# Enable rate limiting (recommended: true)
ENABLE_RATE_LIMITING=true

# Block suspicious requests (recommended: true)
BLOCK_SUSPICIOUS_REQUESTS=true

# Show error details (NEVER enable in production)
SHOW_ERROR_DETAILS=false

# Trusted IPs (comma-separated, optional - for bypassing rate limits)
# TRUSTED_IPS=127.0.0.1,::1

# Force HTTPS redirect in production
FORCE_HTTPS=true

# ==================== TWILIO SMS CONFIGURATION ====================
# Twilio SMS Configuration (Optional - Leave empty if not using SMS)
# Get credentials from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SMS Demo Mode - FREE Testing (no actual SMS sent, just console logs)
SMS_DEMO_MODE=true

# ==================== SUPERADMIN CREDENTIALS ====================
# Superadmin Credentials (Hidden, used to create shop admins)
# CRITICAL: Change these in production - these are used to create first admin account
SUPERADMIN_USERNAME=your_superadmin_username
SUPERADMIN_PASSWORD=your_strong_password_here

# ==================== EMAIL CONFIGURATION ====================
# Email Configuration (Gmail or other SMTP)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# ========================================
# Storage Provider Selection
# ========================================
USE_AZURE_STORAGE=true

# ========================================
# Azure Blob Storage Configuration
# ========================================
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string_here
AZURE_STORAGE_CONTAINER_NAME=your_container_name



# ========================================
# WhatsApp Cloud API Configuration (REQUIRED for WhatsApp Invoice)
# ========================================
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="container-fluid mt-4">
        <div class="page-header">
            <h2>
                <i class="bi bi-speedometer2"></i> Dashboard Overview
            </h2>
        </div>

        <!-- Statistics Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card stat-card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-2">Total Products</h6>
                                <h2 class="mb-0"><%= stats.totalProducts %></h2>
                            </div>
                            <i class="bi bi-box-seam" style="font-size: 3rem; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-2">Low Stock</h6>
                                <h2 class="mb-0"><%= stats.lowStockProducts %></h2>
                                <a href="/inventory/low-stock" class="text-white" style="text-decoration: underline; font-size: 0.875rem;">View Items</a>
                            </div>
                            <i class="bi bi-exclamation-triangle" style="font-size: 3rem; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-2">Today's Sales</h6>
                                <h2 class="mb-0"><%= stats.todaySales %></h2>
                                <p class="mb-0" style="font-size: 0.875rem;">₹<%= stats.todayRevenue.toFixed(2) %></p>
                            </div>
                            <i class="bi bi-calendar-day" style="font-size: 3rem; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-2">Total Revenue</h6>
                                <h2 class="mb-0">₹<%= (stats.totalRevenue / 1000).toFixed(1) %>K</h2>
                                <p class="mb-0" style="font-size: 0.875rem;">All Time</p>
                            </div>
                            <i class="bi bi-cash-stack" style="font-size: 3rem; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Employee Reports (Admin Only) -->
        <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-people"></i> Employee Performance
                        </h5>
                        <a href="/employee-activity" class="btn btn-sm btn-primary">View Details</a>
                    </div>
                    <div class="card-body">
                        <% if (typeof employeeReports !== 'undefined' && employeeReports.length > 0) { %>
                        <div class="row g-3">
                            <% employeeReports.forEach((report, index) => { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-people"></i> Employee Performance
                        </h5>
                        <a href="/employee-activity" class="btn btn-sm btn-primary">View Details</a>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <% employeeReports.forEach((report, index) => { %>
                            <div class="col-12">
                                <div class="card border-primary">
                                    <div class="card-header bg-primary text-white">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center" 
                                                     style="width: 40px; height: 40px;">
                                                    <i class="bi bi-building" style="font-size: 1.2rem;"></i>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h6 class="mb-0">Branch <%= index + 1 %> - <%= report.employee.fullName %></h6>
                                                <small class="opacity-75">Manager: <%= report.employee.username %></small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <!-- Branch Statistics Cards -->
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-3 col-6">
                                                <div class="card bg-light border-0">
                                                    <div class="card-body text-center py-2">
                                                        <div class="text-primary">
                                                            <i class="bi bi-box-seam" style="font-size: 1.5rem;"></i>
                                                        </div>
                                                        <h6 class="mb-0"><%= report.branchStats.totalProducts %></h6>
                                                        <small class="text-muted">Total Products</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-6">
                                                <div class="card bg-light border-0">
                                                    <div class="card-body text-center py-2">
                                                        <div class="text-warning">
                                                            <i class="bi bi-exclamation-triangle" style="font-size: 1.5rem;"></i>
                                                        </div>
                                                        <h6 class="mb-0"><%= report.branchStats.lowStockProducts %></h6>
                                                        <small class="text-muted">Low Stock</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-6">
                                                <div class="card bg-light border-0">
                                                    <div class="card-body text-center py-2">
                                                        <div class="text-success">
                                                            <i class="bi bi-calendar-day" style="font-size: 1.5rem;"></i>
                                                        </div>
                                                        <h6 class="mb-0"><%= report.branchStats.todaySales %></h6>
                                                        <small class="text-muted">Today's Sales</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-6">
                                                <div class="card bg-light border-0">
                                                    <div class="card-body text-center py-2">
                                                        <div class="text-info">
                                                            <i class="bi bi-cash-stack" style="font-size: 1.5rem;"></i>
                                                        </div>
                                                        <h6 class="mb-0">₹<%= (report.branchStats.totalRevenue/1000).toFixed(1) %>K</h6>
                                                        <small class="text-muted">Total Revenue</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Today's Performance Summary -->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                                    <span class="text-muted">Today's Revenue:</span>
                                                    <strong class="text-success">₹<%= report.branchStats.todayRevenue.toFixed(2) %></strong>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-end">
                                                    <a href="/employee-activity/<%= report.employee._id %>" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-bar-chart"></i> View Detailed Report
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                        <% } else { %>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No employees found or no employee data available yet. 
                            <a href="/employees" class="alert-link">Add employees</a> to see performance reports.
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- My Branch Performance (Employee Only) -->
        <% if (typeof userRole !== 'undefined' && userRole === 'staff' && typeof ownBranchReport !== 'undefined' && ownBranchReport) { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-building"></i> My Branch Performance
                        </h5>
                        <span class="badge bg-primary">Branch Manager</span>
                    </div>
                    <div class="card-body">
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="bg-white text-success rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-person-circle" style="font-size: 1.2rem;"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-0">My Branch - <%= ownBranchReport.employee.fullName %></h6>
                                        <small class="opacity-75">Branch Manager: <%= ownBranchReport.employee.username %></small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Branch Statistics Cards -->
                                <div class="row g-3 mb-3">
                                    <div class="col-md-3 col-6">
                                        <div class="card bg-light border-0">
                                            <div class="card-body text-center py-2">
                                                <div class="text-primary">
                                                    <i class="bi bi-box-seam" style="font-size: 1.5rem;"></i>
                                                </div>
                                                <h6 class="mb-0"><%= ownBranchReport.branchStats.totalProducts %></h6>
                                                <small class="text-muted">My Products</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <div class="card bg-light border-0">
                                            <div class="card-body text-center py-2">
                                                <div class="text-warning">
                                                    <i class="bi bi-exclamation-triangle" style="font-size: 1.5rem;"></i>
                                                </div>
                                                <h6 class="mb-0"><%= ownBranchReport.branchStats.lowStockProducts %></h6>
                                                <small class="text-muted">Low Stock Items</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <div class="card bg-light border-0">
                                            <div class="card-body text-center py-2">
                                                <div class="text-success">
                                                    <i class="bi bi-calendar-day" style="font-size: 1.5rem;"></i>
                                                </div>
                                                <h6 class="mb-0"><%= ownBranchReport.branchStats.todaySales %></h6>
                                                <small class="text-muted">Today's Sales</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <div class="card bg-light border-0">
                                            <div class="card-body text-center py-2">
                                                <div class="text-info">
                                                    <i class="bi bi-cash-stack" style="font-size: 1.5rem;"></i>
                                                </div>
                                                <h6 class="mb-0">₹<%= (ownBranchReport.branchStats.totalRevenue/1000).toFixed(1) %>K</h6>
                                                <small class="text-muted">Total Revenue</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Today's Performance Summary -->
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                            <span class="text-muted">Today's Revenue:</span>
                                            <strong class="text-success">₹<%= ownBranchReport.branchStats.todayRevenue.toFixed(2) %></strong>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                            <span class="text-muted">Total Sales:</span>
                                            <strong class="text-primary"><%= ownBranchReport.totalSales %></strong>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex justify-content-center">
                                            <a href="/inventory/low-stock" class="btn btn-outline-warning btn-sm me-2">
                                                <i class="bi bi-exclamation-triangle"></i> Check Low Stock
                                            </a>
                                            <a href="/reports" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-bar-chart"></i> View Reports
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Recent Sales -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-clock-history"></i> Recent Sales
                        </h5>
                        <a href="/sales" class="btn btn-sm btn-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <% if (recentSales.length === 0) { %>
                            <p class="text-muted text-center">No sales yet</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Bill #</th>
                                            <th>Customer</th>
                                            <th>Items</th>
                                            <th>Total</th>
                                            <th>Payment</th>
                                            <th>Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% recentSales.forEach(sale => { %>
                                            <tr>
                                                <td><%= sale.billNumber %></td>
                                                <td><%= sale.customerName %></td>
                                                <td><%= sale.items.length %></td>
                                                <td>₹<%= sale.total.toFixed(2) %></td>
                                                <td>
                                                    <span class="badge bg-secondary">
                                                        <%= sale.paymentMethod.toUpperCase() %>
                                                    </span>
                                                </td>
                                                <td><%= new Date(sale.createdAt).toLocaleString() %></td>
                                                <td>
                                                    <a href="/bill/<%= sale._id %>" class="btn btn-sm btn-info">
                                                        <i class="bi bi-receipt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= employee.fullName %> Activity Report - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container-fluid mt-4">
        <!-- Employee Header -->
        <div class="card mb-4 bg-primary text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px;">
                            <i class="bi bi-person-circle" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-4">
                        <h2 class="mb-0"><%= employee.fullName %></h2>
                        <p class="mb-1"><i class="bi bi-badge-tm"></i> Employee ID: <%= employee.username %></p>
                        <p class="mb-1"><i class="bi bi-envelope"></i> <%= employee.email %></p>
                        <% if (employee.phone) { %>
                            <p class="mb-0"><i class="bi bi-telephone"></i> <%= employee.phone %></p>
                        <% } %>
                    </div>
                    <div>
                        <a href="/employee-activity" class="btn btn-light">
                            <i class="bi bi-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6 class="card-title">Total Sales</h6>
                        <h2><%= stats.totalSales %></h2>
                        <small>Bills Created</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h6 class="card-title">Revenue Generated</h6>
                        <h2>₹<%= stats.totalRevenue.toFixed(2) %></h2>
                        <small>Total Sales Value</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h6 class="card-title">Amount Collected</h6>
                        <h2>₹<%= stats.totalCollected.toFixed(2) %></h2>
                        <small>Cash/Payment Received</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h6 class="card-title">Pending Due</h6>
                        <h2>₹<%= stats.totalDue.toFixed(2) %></h2>
                        <small>Outstanding Amount</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Stats -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-check-circle text-success"></i> Paid Bills</h6>
                        <h3><%= stats.paidSales %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-clock-history text-warning"></i> Partial Payment</h6>
                        <h3><%= stats.partialSales %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-exclamation-circle text-danger"></i> Due Bills</h6>
                        <h3><%= stats.dueSales %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-cash-coin"></i> Total Expenses</h6>
                        <h3>₹<%= stats.totalExpenses.toFixed(2) %></h3>
                        <small><%= stats.expensesCount %> Expenses Added</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inventory Activity -->
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Products Added by Employee</h5>
                    </div>
                    <div class="card-body">
                        <h3><%= stats.productsAddedCount %> Products</h3>
                        <% if (productsAdded.length > 0) { %>
                            <div class="list-group mt-3">
                                <% productsAdded.slice(0, 5).forEach(product => { %>
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <strong><%= product.name %></strong>
                                            <span>₹<%= product.price %></span>
                                        </div>
                                        <small class="text-muted">
                                            Added: <%= new Date(product.createdAt).toLocaleDateString() %>
                                        </small>
                                    </div>
                                <% }) %>
                            </div>
                            <% if (productsAdded.length > 5) { %>
                                <p class="text-muted mt-2 mb-0">
                                    <small>+ <%= productsAdded.length - 5 %> more products</small>
                                </p>
                            <% } %>
                        <% } else { %>
                            <p class="text-muted">No products added yet</p>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Products Updated by Employee</h5>
                    </div>
                    <div class="card-body">
                        <h3><%= stats.productsUpdatedCount %> Products</h3>
                        <% if (productsUpdated.length > 0) { %>
                            <div class="list-group mt-3">
                                <% productsUpdated.slice(0, 5).forEach(product => { %>
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <strong><%= product.name %></strong>
                                            <span class="badge bg-secondary">Stock: <%= product.stock %></span>
                                        </div>
                                        <small class="text-muted">
                                            Updated: <%= new Date(product.updatedAt).toLocaleDateString() %>
                                        </small>
                                    </div>
                                <% }) %>
                            </div>
                            <% if (productsUpdated.length > 5) { %>
                                <p class="text-muted mt-2 mb-0">
                                    <small>+ <%= productsUpdated.length - 5 %> more products</small>
                                </p>
                            <% } %>
                        <% } else { %>
                            <p class="text-muted">No products updated yet</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Collections -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Payment Collections</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>Total Payments Collected: ₹<%= stats.totalPaymentsCollected.toFixed(2) %></h4>
                    </div>
                    <div class="col-md-6">
                        <h4>Number of Collections: <%= stats.paymentCount %></h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- Expenses Added by Employee -->
        <div class="card mb-4">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-cash-coin"></i> Expenses Added by Employee</h5>
                <span class="badge bg-light text-dark">Total: <%= expenses.length %> expenses</span>
            </div>
            <div class="card-body">
                <% if (expenses.length === 0) { %>
                    <p class="text-muted">No expenses recorded yet</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Date</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>Amount</th>
                                    <th>Payment Method</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% expenses.forEach((expense, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= new Date(expense.date).toLocaleDateString() %></td>
                                        <td><span class="badge bg-secondary"><%= expense.category %></span></td>
                                        <td><%= expense.description %></td>
                                        <td><strong class="text-danger">₹<%= expense.amount.toFixed(2) %></strong></td>
                                        <td>
                                            <span class="badge bg-info">
                                                <i class="bi bi-credit-card"></i> <%= expense.paymentMethod.toUpperCase() %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (expense.notes) { %>
                                                <%= expense.notes %>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="4" class="text-end">TOTAL EXPENSES:</th>
                                    <th class="text-danger">₹<%= stats.totalExpenses.toFixed(2) %></th>
                                    <th colspan="2"></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Recent Sales -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-receipt"></i> All Sales by Employee</h5>
                <span class="badge bg-light text-dark">Total: <%= sales.length %> bills</span>
            </div>
            <div class="card-body">
                <% if (sales.length === 0) { %>
                    <p class="text-muted">No sales recorded yet</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Bill Number</th>
                                    <th>Customer</th>
                                    <th>Items</th>
                                    <th>Subtotal</th>
                                    <th>Discount</th>
                                    <th>Total Amount</th>
                                    <th>Paid</th>
                                    <th>Due</th>
                                    <th>Payment Status</th>
                                    <th>Date & Time</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% sales.forEach((sale, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><strong><%= sale.billNumber %></strong></td>
                                        <td>
                                            <%= sale.customerName %>
                                            <% if (sale.customerPhone) { %>
                                                <br><small class="text-muted"><i class="bi bi-telephone"></i> <%= sale.customerPhone %></small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-info" 
                                                    data-bs-toggle="collapse" 
                                                    data-bs-target="#items-<%= sale._id %>">
                                                <i class="bi bi-list"></i> <%= sale.items.length %> items
                                            </button>
                                            <div class="collapse mt-2" id="items-<%= sale._id %>">
                                                <div class="card card-body">
                                                    <small>
                                                        <% sale.items.forEach(item => { %>
                                                            <div class="mb-1">
                                                                <strong><%= item.productName %></strong><br>
                                                                Qty: <%= item.quantity %> × ₹<%= item.price.toFixed(2) %> = ₹<%= item.subtotal.toFixed(2) %>
                                                            </div>
                                                        <% }) %>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>₹<%= sale.subtotal.toFixed(2) %></td>
                                        <td class="text-success">
                                            <% if (sale.discount > 0) { %>
                                                ₹<%= sale.discount.toFixed(2) %>
                                            <% } else { %>
                                                ₹0.00
                                            <% } %>
                                        </td>
                                        <td><strong>₹<%= sale.total.toFixed(2) %></strong></td>
                                        <td class="text-success">₹<%= sale.amountPaid.toFixed(2) %></td>
                                        <td class="text-danger">
                                            <% if (sale.dueAmount > 0) { %>
                                                ₹<%= sale.dueAmount.toFixed(2) %>
                                            <% } else { %>
                                                -
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (sale.paymentStatus === 'paid') { %>
                                                <span class="badge bg-success">Paid</span>
                                            <% } else if (sale.paymentStatus === 'partial') { %>
                                                <span class="badge bg-warning">Partial</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Due</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <%= new Date(sale.createdAt).toLocaleDateString() %>
                                            <br><small class="text-muted"><%= new Date(sale.createdAt).toLocaleTimeString() %></small>
                                        </td>
                                        <td>
                                            <a href="/bill/<%= sale._id %>" class="btn btn-sm btn-primary" target="_blank">
                                                <i class="bi bi-eye"></i> View Bill
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="6"></th>
                                    <th class="text-end">TOTALS:</th>
                                    <th class="text-success">₹<%= stats.totalCollected.toFixed(2) %></th>
                                    <th class="text-danger">₹<%= stats.totalDue.toFixed(2) %></th>
                                    <th colspan="3"></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

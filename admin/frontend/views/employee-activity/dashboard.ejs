<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Activity Dashboard - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container-fluid mt-4">
        <div class="page-header">
            <h2>
                <i class="bi bi-activity"></i> Employee Activity Dashboard
            </h2>
            <p class="text-muted">Track and monitor employee performance and activities</p>
        </div>

        <% if (employees.length === 0) { %>
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No employees added yet. 
                <a href="/employees/add" class="alert-link">Add an employee</a> to start tracking activities.
            </div>
        <% } else { %>
            <div class="row g-3">
                <% employees.forEach(employee => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 60px; height: 60px;">
                                            <i class="bi bi-person-circle" style="font-size: 2rem;"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="card-title mb-0"><%= employee.fullName %></h5>
                                        <p class="text-muted mb-0">
                                            <small>
                                                <i class="bi bi-badge-tm"></i> <%= employee.username %>
                                            </small>
                                        </p>
                                        <p class="text-muted mb-0">
                                            <small>
                                                <i class="bi bi-envelope"></i> <%= employee.email %>
                                            </small>
                                        </p>
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <a href="/employee-activity/<%= employee._id %>" class="btn btn-primary">
                                        <i class="bi bi-bar-chart"></i> View Full Report
                                    </a>
                                </div>

                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> 
                                        Joined: <%= new Date(employee.createdAt).toLocaleDateString() %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <div class="card mt-4">
                <div class="card-body text-center">
                    <a href="/employee-activity/compare/all" class="btn btn-lg btn-success">
                        <i class="bi bi-graph-up-arrow"></i> Compare All Employees Performance
                    </a>
                </div>
            </div>
        <% } %>
    </div>

</div>
<!-- End Main Content Wrapper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

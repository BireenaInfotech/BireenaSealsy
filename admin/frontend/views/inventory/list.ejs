<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-box-seam"></i> Inventory Management</h2>
            <div>
                <a href="/inventory-report" class="btn btn-info me-2">
                    <i class="bi bi-graph-up"></i> DAILY REPORT
                </a>
                <a href="/inventory/low-stock" class="btn btn-warning me-2">
                    <i class="bi bi-exclamation-triangle"></i> LOW STOCK
                </a>
                <a href="/inventory/add" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> ADD PRODUCT
                </a>
            </div>
        </div>

        <!-- üéØ Quick Stats Cards -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="text-primary"><%= (typeof allProducts !== 'undefined' ? allProducts.length : 0) %></h5>
                        <small class="d-block">Total Products</small>
                        <span class="text-muted" style="font-size: 0.75rem;">In Inventory</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h5><%= (typeof expiringCount !== 'undefined' ? expiringCount : 0) %></h5>
                        <small class="d-block">Expiring Soon</small>
                        <a href="/inventory/expiring-soon" class="text-white text-decoration-none" style="font-size: 0.75rem;">View</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <h5><%= (typeof expiredCount !== 'undefined' ? expiredCount : 0) %></h5>
                        <small class="d-block">Expired Items</small>
                        <a href="/inventory/expired" class="text-white text-decoration-none" style="font-size: 0.75rem;">View</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5>‚Çπ<%= (typeof allProducts !== 'undefined' ? allProducts.reduce((sum, p) => sum + ((p.purchasePrice || 0) * p.stock), 0).toFixed(0) : 0) %></h5>
                        <small class="d-block">Total Stock Value</small>
                        <span class="text-white" style="font-size: 0.75rem;">Purchase Cost</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- üéØ Quick Action Buttons -->
        <div class="mb-3 d-flex flex-wrap gap-2">
            <a href="/inventory/activity-log" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-clock-history"></i> ACTIVITY LOG
            </a>
            <a href="/inventory/damage-report" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-x-circle"></i> DAMAGE REPORT
            </a>
            <a href="/inventory/transfer" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left-right"></i> STOCK TRANSFER (ADMIN ONLY)
            </a>
            <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
            <a href="/inventory/supplier-reports" class="btn btn-outline-info btn-sm">
                <i class="bi bi-truck"></i> SUPPLIER REPORTS
            </a>
            <% } else { %>
            <a href="/inventory/supplier-reports" class="btn btn-outline-info btn-sm">
                <i class="bi bi-truck"></i> MY SUPPLIER REPORTS
            </a>
            <% } %>
        </div>

        <!-- üéØ Filters -->
        <div class="card mb-3">
            <div class="card-body">
                <form method="GET" class="row g-3">
                    <div class="col-md-4 col-12">
                        <label class="form-label"><strong>üîç SEARCH</strong></label>
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Search by name or category..." value="<%= (typeof filters !== 'undefined' && filters.search) ? filters.search : '' %>">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                        <small class="text-muted">e.g., Cake, Black Forest, Bread</small>
                    </div>
                    <div class="col-md-2 col-12">
                        <label class="form-label"><strong>EXPIRY STATUS</strong></label>
                        <select name="expiryFilter" class="form-select form-select-sm" onchange="this.form.submit()">
                            <option value="">All Products</option>
                            <option value="expired" <%= (typeof filters !== 'undefined' && filters.expiryFilter === 'expired') ? 'selected' : '' %>>Expired</option>
                            <option value="soon" <%= (typeof filters !== 'undefined' && filters.expiryFilter === 'soon') ? 'selected' : '' %>>Expiring Soon (30 days)</option>
                            <option value="fresh" <%= (typeof filters !== 'undefined' && filters.expiryFilter === 'fresh') ? 'selected' : '' %>>Fresh (>30 days)</option>
                            <option value="no-expiry" <%= (typeof filters !== 'undefined' && filters.expiryFilter === 'no-expiry') ? 'selected' : '' %>>No Expiry Date</option>
                        </select>
                    </div>
                    <div class="col-md-2 col-12">
                        <label class="form-label"><strong>STOCK STATUS</strong></label>
                        <select name="stockFilter" class="form-select form-select-sm" onchange="this.form.submit()">
                            <option value="">All Stock</option>
                            <option value="low" <%= (typeof filters !== 'undefined' && filters.stockFilter === 'low') ? 'selected' : '' %>>Low Stock</option>
                            <option value="out" <%= (typeof filters !== 'undefined' && filters.stockFilter === 'out') ? 'selected' : '' %>>Out of Stock</option>
                        </select>
                    </div>
                    <div class="col-md-2 col-12">
                        <label class="form-label"><strong>EMPLOYEE</strong></label>
                        <select name="employee" class="form-select form-select-sm" onchange="this.form.submit()">
                            <option value="">All Employees</option>
                            <% if (typeof employees !== 'undefined' && employees.length > 0) { %>
                                <% employees.forEach(emp => { %>
                                    <option value="<%= emp._id %>" <%= (typeof filters !== 'undefined' && filters.employee === emp._id.toString()) ? 'selected' : '' %>>
                                        <%= emp.fullName || emp.username %><% if (emp.role === 'admin') { %> (Admin)<% } %>
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-md-2 col-12 d-flex align-items-end">
                        <a href="/inventory" class="btn btn-secondary btn-sm w-100">
                            <i class="bi bi-x-circle"></i> CLEAR ALL
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <% if (products.length === 0) { %>
                    <p class="text-center text-muted py-5">No products match the selected filters. Try adjusting your search!</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>NAME</th>
                                    <th>CATEGORY</th>
                                    <th>PRICE</th>
                                    <th>STOCK</th>
                                    <th>UNIT</th>
                                    <th>ADDED BY</th>
                                    <th>DATE ADDED</th>
                                    <th>STATUS</th>
                                    <th>ACTIONS</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(product => { 
                                    let rowClass = '';
                                    if (product.expiryDate) {
                                        const today = new Date();
                                        const expiry = new Date(product.expiryDate);
                                        const daysLeft = Math.ceil((expiry - today) / (1000 * 60 * 60 * 24));
                                        if (daysLeft < 0) rowClass = 'table-danger';
                                        else if (daysLeft <= 30) rowClass = 'table-warning';
                                    }
                                    if (product.stock === 0) rowClass = 'table-secondary';
                                %>
                                    <tr class="<%= rowClass %>">
                                        <td>
                                            <strong><%= product.name %></strong>
                                            <% if (product.updatedBy) { %>
                                                <br><small class="text-muted">
                                                    <i class="bi bi-pencil"></i> Updated by: <%= product.updatedBy.fullName || product.updatedBy.username %>
                                                </small>
                                            <% } %>
                                        </td>
                                        <td><%= product.category %></td>
                                        <td>
                                            <% if (product.category && product.category.toLowerCase().includes('cake') && (product.halfKgPrice > 0 || product.oneKgPrice > 0 || product.pastryPrice > 0)) { %>
                                                <small style="display: block; line-height: 1.4;">
                                                    <% if (product.halfKgPrice > 0) { %>
                                                        ¬Ωkg: ‚Çπ<%= product.halfKgPrice.toFixed(2) %><br>
                                                    <% } %>
                                                    <% if (product.oneKgPrice > 0) { %>
                                                        1kg: ‚Çπ<%= product.oneKgPrice.toFixed(2) %><br>
                                                    <% } %>
                                                    <% if (product.pastryPrice > 0) { %>
                                                        <span class="text-success">üßÅ Pastry (<%= product.pastryGrams || 100 %>g): ‚Çπ<%= product.pastryPrice.toFixed(2) %></span>
                                                    <% } %>
                                                </small>
                                            <% } else { %>
                                                ‚Çπ<%= product.price.toFixed(2) %>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (product.trackStock === false) { %>
                                                <span class="text-muted">-</span>
                                            <% } else { %>
                                                <strong><%= product.stock %></strong>
                                            <% } %>
                                        </td>
                                        <td>
                                            <%= product.unit %>
                                            <% if (product.unit === 'gms' && product.gramAmount > 0) { %>
                                                <small style="display: block; color: #6b7280;">(<%= product.gramAmount %>g)</small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (product.addedBy) { %>
                                                <%= product.addedBy.fullName || product.addedBy.username %>
                                            <% } else { %>
                                                <span class="text-muted">OWNER</span>
                                            <% } %>
                                        </td>
                                        <td><%= new Date(product.createdAt).toLocaleDateString() %></td>
                                        <td>
                                            <% if (product.trackStock === false) { %>
                                                <span class="badge" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">MADE TO ORDER</span>
                                            <% } else if (product.stock === 0) { %>
                                                <span class="badge bg-secondary">OUT OF STOCK</span>
                                            <% } else if (product.stock <= product.reorderLevel) { %>
                                                <span class="badge bg-warning">LOW STOCK</span>
                                            <% } else { %>
                                                <span class="badge bg-success">IN STOCK</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/inventory/edit/<%= product._id %>" class="btn btn-sm btn-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="/inventory/damage/<%= product._id %>" class="btn btn-sm btn-warning" title="Damage Entry">
                                                <i class="bi bi-exclamation-triangle"></i>
                                            </a>
                                            <form action="/inventory/delete/<%= product._id %>" method="POST" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to delete this product?')">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

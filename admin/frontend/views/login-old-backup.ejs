        </div>
    </div>

    <script>
        // Role toggle functionality
        function switchRole(role) {
            // Update active tab
            document.querySelectorAll('.role-option').forEach(opt => opt.classList.remove('active'));
            event.target.closest('.role-option').classList.add('active');
            
            // Switch forms with smooth transition
            const adminForm = document.getElementById('adminForm');
            const employeeForm = document.getElementById('employeeForm');
            
            if (role === 'admin') {
                employeeForm.style.opacity = '0';
                employeeForm.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    employeeForm.style.display = 'none';
                    adminForm.style.display = 'block';
                    setTimeout(() => {
                        adminForm.style.opacity = '1';
                        adminForm.style.transform = 'translateY(0)';
                    }, 50);
                }, 300);
            } else {
                adminForm.style.opacity = '0';
                adminForm.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    adminForm.style.display = 'none';
                    employeeForm.style.display = 'block';
                    setTimeout(() => {
                        employeeForm.style.opacity = '1';
                        employeeForm.style.transform = 'translateY(0)';
                    }, 50);
                }, 300);
            }
        }
        
        // Add smooth transitions to forms
        document.querySelectorAll('form').forEach(form => {
            form.style.transition = 'all 0.3s ease';
        });
        
        // Helper function to show notification
        function showNotification(message, type = 'error') {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 15px 25px;
                background: ${type === 'success' ? 'linear-gradient(135deg, #10b981, #059669)' : 'linear-gradient(135deg, #ef4444, #dc2626)'};
                color: white;
                border-radius: 12px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
                z-index: 10000;
                font-weight: 500;
                animation: slideIn 0.3s ease;
                max-width: 400px;
            `;
            notification.innerHTML = `<i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i> ${message}`;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => notification.remove(), 300);
            }, 4000);
        }
        
        // Admin Login Form Handler
        document.getElementById('adminForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const username = document.getElementById('adminUsername').value.trim();
            const password = document.getElementById('adminPassword').value;
            const submitBtn = e.target.querySelector('button[type="submit"]');
            const btnText = submitBtn.querySelector('span');
            const originalText = btnText.textContent;
            
            // Disable button and show loading
            submitBtn.disabled = true;
            btnText.textContent = 'Logging in...';
            
            try {
                const response = await fetch('/admin/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showNotification(data.message || 'Login successful!', 'success');
                    setTimeout(() => {
                        window.location.href = data.redirectUrl || '/dashboard';
                    }, 500);
                } else {
                    showNotification(data.message || 'Login failed', 'error');
                    submitBtn.disabled = false;
                    btnText.textContent = originalText;
                }
            } catch (error) {
                console.error('Login error:', error);
                showNotification('An error occurred. Please try again.', 'error');
                submitBtn.disabled = false;
                btnText.textContent = originalText;
            }
        });
        
        // Employee Login Form Handler
        document.getElementById('employeeForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const username = document.getElementById('employeeUsername').value.trim();
            const password = document.getElementById('employeePassword').value;
            const submitBtn = e.target.querySelector('button[type="submit"]');
            const btnText = submitBtn.querySelector('span');
            const originalText = btnText.textContent;
            
            // Disable button and show loading
            submitBtn.disabled = true;
            btnText.textContent = 'Logging in...';
            
            try {
                const response = await fetch('/employee/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showNotification(data.message || 'Login successful!', 'success');
                    setTimeout(() => {
                        window.location.href = data.redirectUrl || '/dashboard';
                    }, 500);
                } else {
                    showNotification(data.message || 'Login failed', 'error');
                    submitBtn.disabled = false;
                    btnText.textContent = originalText;
                }
            } catch (error) {
                console.error('Login error:', error);
                showNotification('An error occurred. Please try again.', 'error');
                submitBtn.disabled = false;
                btnText.textContent = originalText;
            }
        });
        
        // 3D Tilt effect on mouse move (subtle parallax)
        const loginContainer = document.getElementById('loginContainer');
        const loginCard = document.getElementById('loginCard');
        
        document.addEventListener('mousemove', (e) => {
            if (window.innerWidth > 768) {
                const { clientX, clientY } = e;
                const { innerWidth, innerHeight } = window;
                
                const xRotation = ((clientY / innerHeight) - 0.5) * 5;
                const yRotation = ((clientX / innerWidth) - 0.5) * -5;
                
                loginCard.style.transform = `perspective(1000px) rotateX(${xRotation}deg) rotateY(${yRotation}deg)`;
            }
        });
        
        // Reset tilt on mouse leave
        document.addEventListener('mouseleave', () => {
            loginCard.style.transform = 'perspective(1000px) rotateX(0deg) rotateY(0deg)';
        });
        
        // Particle animation enhancement
        const particles = document.querySelectorAll('.particle');
        particles.forEach((particle, index) => {
            setInterval(() => {
                const randomX = Math.random() * 100 - 50;
                const randomY = Math.random() * 100 - 50;
                particle.style.transform = `translate(${randomX}px, ${randomY}px) scale(${0.8 + Math.random() * 0.4})`;
            }, 3000 + index * 500);
        });
        
        // Add keyframe animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(400px); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            @keyframes slideOut {
                from { transform: translateX(0); opacity: 1; }
                to { transform: translateX(400px); opacity: 0; }
            }
        `;
        document.head.appendChild(style);
    </script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expenses - Bireena Bakery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <% if (typeof success_msg !== 'undefined' && success_msg) { %>
        <div class="alert alert-success alert-dismissible fade show m-3">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="container-fluid mt-4">
        <div class="page-header mb-4 d-flex justify-content-between align-items-center">
            <h2><i class="bi bi-receipt"></i> Expenses</h2>
            <div class="d-flex gap-2">
                <a href="/reports" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Reports
                </a>
                <a href="/expenses/add" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Expense
                </a>
            </div>
        </div>

        <!-- Filter Section -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="GET" action="/expenses" class="row g-3 align-items-end" id="filterForm">
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" 
                               value="<%= filters.startDate || '' %>">
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" 
                               value="<%= filters.endDate || '' %>">
                    </div>
                    <div class="col-md-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category">
                            <option value="all">All Categories</option>
                            <option value="Raw Materials" <%= filters.category === 'Raw Materials' ? 'selected' : '' %>>Raw Materials</option>
                            <option value="Utilities" <%= filters.category === 'Utilities' ? 'selected' : '' %>>Utilities</option>
                            <option value="Salary" <%= filters.category === 'Salary' ? 'selected' : '' %>>Salary</option>
                            <option value="Rent" <%= filters.category === 'Rent' ? 'selected' : '' %>>Rent</option>
                            <option value="Maintenance" <%= filters.category === 'Maintenance' ? 'selected' : '' %>>Maintenance</option>
                            <option value="Transportation" <%= filters.category === 'Transportation' ? 'selected' : '' %>>Transportation</option>
                            <option value="Marketing" <%= filters.category === 'Marketing' ? 'selected' : '' %>>Marketing</option>
                            <option value="Other" <%= filters.category === 'Other' ? 'selected' : '' %>>Other</option>
                        </select>
                    </div>
                    <% if (typeof userRole !== 'undefined' && userRole === 'admin' && employees && employees.length > 0) { %>
                        <div class="col-md-3">
                            <label for="employee" class="form-label">Employee</label>
                            <select class="form-select" id="employee" name="employee" onchange="document.getElementById('filterForm').submit();">
                                <option value="">All Employees</option>
                                <% employees.forEach(emp => { %>
                                    <option value="<%= emp._id %>" <%= filters.employee === emp._id.toString() ? 'selected' : '' %>>
                                        <%= emp.fullName || emp.username %> (<%= emp.role.toUpperCase() %>)
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                    <% } %>
                    <div class="<%= (typeof userRole !== 'undefined' && userRole === 'admin' && employees && employees.length > 0) ? 'col-md-12 mt-2' : 'col-md-3' %>">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel"></i> Filter
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Expenses Table -->
        <div class="card">
            <div class="card-body">
                <% if (expenses.length === 0) { %>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No expenses found. Click "Add Expense" to create one.
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>Amount</th>
                                    <th>Payment Method</th>
                                    <th>Added By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let totalAmount = 0; %>
                                <% expenses.forEach(expense => { %>
                                    <% totalAmount += expense.amount; %>
                                    <tr>
                                        <td><%= new Date(expense.date).toLocaleDateString('en-IN') %></td>
                                        <td><span class="badge bg-info"><%= expense.category %></span></td>
                                        <td><%= expense.description %></td>
                                        <td class="text-danger fw-bold">₹<%= expense.amount.toFixed(2) %></td>
                                        <td><span class="badge bg-secondary"><%= expense.paymentMethod.toUpperCase() %></span></td>
                                        <td><%= expense.addedBy ? expense.addedBy.fullName : 'N/A' %></td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" onclick="deleteExpense('<%= expense._id %>')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                                <tr class="table-secondary fw-bold">
                                    <td colspan="3" class="text-end">TOTAL:</td>
                                    <td class="text-danger">₹<%= totalAmount.toFixed(2) %></td>
                                    <td colspan="3"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        async function deleteExpense(id) {
            if (!confirm('Are you sure you want to delete this expense?')) return;
            
            try {
                const response = await fetch(`/expenses/${id}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert(data.message);
                    window.location.reload();
                } else {
                    alert(data.message);
                }
            } catch (error) {
                alert('Error deleting expense');
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
